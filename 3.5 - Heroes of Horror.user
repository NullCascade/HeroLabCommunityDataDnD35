    <tag group="fCategory" tag="Vile"/>
    <bootstrap thing="rBlindsen">
      <assignval field="Value" value="30"/>
      </bootstrap>
    <pickreq thing="fWillDefor"/>
    <exprreq message="Evil alignment required"><![CDATA[hero.tagis[Alignment.Evil] <> 0]]></exprreq>
    </thing>
