  <thing id="cTrNCreU1" name="Create Undead (1/day)" description="Create Undead as per the spell once per day" compset="ClSpecial" summary="Create Undead 1/day">
    <tag group="SpecSource" tag="cHelpTrN" name="True Necromancer" abbrev="Tru Necro"/>
    <tag group="SpecType" tag="SpellLike"/>
    <tag group="AbilType" tag="SpellLike"/>
    <tag group="ClSpecWhen" tag="2" name="2" abbrev="2"/>
    <tag group="Helper" tag="ShowCharge"/>
    <eval phase="PostLevel" priority="10000"><![CDATA[

      ~ Generate our new name
      var level as number
      level = field[xTotalLev].value
      field[livename].text = "Create Undead ("
      var total as number
      if (level < 3) then
        total = 1
      elseif (level < 6) then
        total = 2
      else
        total = 2 
      endif

      ~ Add the total number of uses per day
      field[hTotal].value += total
      field[livename].text = field[livename].text & total & "/day)"]]></eval>
    </thing>
