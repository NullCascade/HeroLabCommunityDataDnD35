  <thing id="cTrNPr1" name="Necromantic prowess, max +1" description="At 3rd level, a true necromancer gains surpassed power over death.  When she rebukes undead, casts a necromancy spell, or uses a spell-like ability that mimics a necromancy spell, her effective caster level increases.\n\nThis bonus increases to a +2 at 6th level, +3 at 9th level, and +4 at 12th level and higher." compset="ClSpecial" summary="Add +1 cater level to a power, if Necromancy school.">
    <tag group="ClSpecWhen" tag="3"/>
    <tag group="SpecSource" tag="cHelpTrN"/>
    <tag group="AbilType" tag="Extra"/>
    <eval phase="PostLevel"><![CDATA[
      ~ Generate our new name
      var level as number
      level = field[xTotalLev].value
      field[livename].text = "Necromantic Prowess, max "
      var total as number
      if (level < 4) then
        total = 1
      elseif (level < 7) then
        total = 2
      elseif (level < 10) then
        total = 3
      elseif (level < 13) then
        total = 4
      else
        total = 4 
      endif

      ~ Add the total number of uses per day
      field[hTotal].value += total
      field[livename].text = field[livename].text & total]]></eval>
    </thing>
