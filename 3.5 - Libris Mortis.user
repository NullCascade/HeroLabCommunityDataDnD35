    <usesource source="LMort"/>
    <tag group="Helper" tag="ShowSpec" name="ShowSpec" abbrev="ShowSpec"/>
    <tag group="fCategory" tag="General"/>
    <exprreq message="Turn Undead required."><![CDATA[tagis[Hero.TurnUndead] <> 0]]></exprreq>
    </thing>
  <thing id="fRequiem" name="Requiem" description="Your bardic music affects undead creatures.\n\n{b}Prerequisite{/b}: Bardic music class feature, Perform (any) 8 ranks.\n\n{b}Benefit{/b}: You can extend the effects of your mind-affecting bardic music and virtuoso&#146;s performance abilities so that they influence even the undead. All bardic music effects on undead creatures have only half the duration they normally would against the living.\n\n{b}Normal{/b}: Undead are usually immune to mind-influencing effects." compset="Feat" summary="Bardic music can affect undead, but are 1/2 duration." uniqueness="useronce">
    <usesource source="LMort"/>
    <tag group="fCategory" tag="General"/>
    <tag group="Helper" tag="ShowSpec" name="ShowSpec" abbrev="ShowSpec"/>
    <exprreq message="Bardic Music required."><![CDATA[picklives[hBrdMusic] <> 0]]></exprreq>
    <prereq message="Perform (any) 8 ranks required.">
      <validate><![CDATA[~ Loop through all perform skills
var result as number
foreach pick in hero where "Helper.SkCatPerf"

~ If this skill has 8 or more ranks, we are valid
  if (each.field[kUserRanks].value >= 8) then
    result += 1
  endif
nexteach

if (result >= 1) then
  @valid = 1
  endif]]></validate>
      </prereq>
    </thing>
  <thing id="fSacreVeng" name="Sacred Vengeance" description="You can channel energy to deal extra damage against undead in melee.\n\n{b}Prerequisite{/b}: Ability to turn undead.\n\n{b}Benefit{/b}: As a free action, spend one of your turn undead attempts to add 2d6 points of damage to all your successful melee attacks against undead until the end of the current round." compset="Feat" summary="Free, use 1 turn for +2d6 melee dam vs undead until end of round." replaces="fSacredVen" uniqueness="useronce">
    <comment>Pre req (done)

Test? (Done)</comment>
    <usesource source="LMort"/>
    <usesource source="CompWarrio"/>
    <tag group="fCategory" tag="Divine"/>
    <tag group="Helper" tag="ShowSpec" name="ShowSpec" abbrev="ShowSpec"/>
    <prereq message="Turn Undead required.">
      <validate><![CDATA[~ If our hero does not have the Turn Undead tag we are not valid, else go check Class Helpers for Mystic & Cleric and determine if it has a cClrNeutGE field value of 0, if so then we are valid. We are also valid if we have 4 levels of Paladin and the Class Special is showing.

   doneif (hero.tagis[Hero.TurnUndead] = 0)

   validif (hero.childfound[cHelpClr].field[cClrNeutGE].value = 0)
   validif (hero.childfound[cHelpMys].field[cClrTurn].value = 2)
   validif (hero.childfound[cPalTurnUn].tagis[Helper.ShowSpec] <> 0)]]></validate>
      </prereq>
    </thing>
  <thing id="fSacrVital" name="Sacred Vitality" description="You can channel positive energy to gain protection from damage to your abilities or your life force.\n\n{b}Prerequisite{/b}: Ability to turn undead.\n\n{b}Benefit{/b}: As a standard action, you can spend one of your turning attempts to gain immunity to ability damage, ability drain, and energy drain for 1 minute." compset="Feat" summary="Stand, use 1 turn to gain imm to ability drain/dam and energy drain for 1 min." uniqueness="useronce">
    <comment>Pre-req (Done)

Test? (Done)</comment>
    <usesource source="LMort"/>
    <tag group="Helper" tag="ShowSpec" name="ShowSpec" abbrev="ShowSpec"/>
    <tag group="fCategory" tag="Divine"/>
    <prereq message="Turn Undead required.">
      <validate><![CDATA[~ If our hero does not have the Turn Undead tag we are not valid, else go check Class Helpers for Mystic & Cleric and determine if it has a cClrNeutGE field value of 0, if so then we are valid. We are also valid if we have 4 levels of Paladin and the Class Special is showing.

