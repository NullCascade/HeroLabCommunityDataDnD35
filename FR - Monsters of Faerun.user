  <thing id="cDrSTDSong" name="Song Dragon Totem" description="Choosing the Song Dragon as your totem adds Perform (Sing), Bluff, and Spellcraft to your list of class skills, grants you an electricity breath weapon, and allows you to cast {i}ventriloquism{/i} as a spell like ability at will." compset="CustomSpec" summary="Add Bluff, Perform (Sing), and Spellcraft to skill list." uniqueness="unique">
    <usesource source="PHB2" parent="p35" name="Player&apos;s Handbook 2"/>
    <tag group="SpecSource" tag="cHelpDrS" name="Dragon Shaman" abbrev="Dragon Shaman"/>
    <bootstrap thing="xImmElec">
      <containerreq phase="First" priority="500"><![CDATA[count:Classes.DraShaman >=9]]></containerreq>
      </bootstrap>
    <eval phase="UserPostAt" priority="10000" index="2"><![CDATA[   perform delete[Helper.ShowSpec]

   var level as number
   level = hero.childfound[cHelpDrS].field[cTotalLev].value

~ Set the information for holder Breath Weapon
   var area as number
   if (level >= 20) then
     area = 120
   elseif (level >= 12) then
     area = 60
   else
     area = 30
   endif

   var damage as number
   damage = level / 2
   damage = round(damage, 0, -1)
   damage = maximum(damage, 2)

   var DC as number
   DC = 10 + level/2 + hero.childfound[aCON].field[aModBonus].value
   DC = round(DC, 0, -1)

    if (level >= 4) then
   hero.childfound[xBreathWea].field[livename].text = "Breath Weapon, " & damage & "d6 electricity, " & area & " ft cone (DC " & DC & ")"
   hero.childfound[xBreathWea].field[xSumm].text = "You have a breath weapon, usable every d4 rounds (Ref half)."
   hero.childfound[xBreathWea].field[CustDesc].text = "At 4th level, you gain a breath weapon corresponding to your totem dragon. Regardless of the area one affects or the type of energy damage it deals, all breath weapons deal 2d6 points of damage, plus an extra 1d6 points of damage for every two additional class levels (3d6 at 6th level, 4d6 at 8th level, and so forth). A successful Reflex save halves the damage dealt; the save DC is equal to 10 + 1/2 your dragon shaman level + your Con modifier. Just like a true dragon, once you breathe you must wait 1d4 rounds before you can use your breath weapon again.{BR}{BR}Cone-shaped breath weapons extend out to 15 feet at 4th level, increasing to 30 feet at 12th level and to 60 feet at 20th level. Line-shaped breath weapons are 30 feet long at 4th level, increasing to 60 feet at 12th level and to 120 feet at 20th level."
  endif

~ Set the information for holder Draconic Adaptation, and apply tags
  if (level >= 13) then
    hero.childfound[cDrSDrAdap].field[livename].text = "Ventriloquism"
    hero.childfound[cDrSDrAdap].field[xSumm].text = "At will, as a spell like ability (share with allies) (CL" & level & ")"

  else
    hero.childfound[cDrSDrAdap].field[livename].text = "Ventriloquism"
    hero.childfound[cDrSDrAdap].field[xSumm].text = "At will, as a spell like ability (CL" & level & ")"
  endif

  hero.childfound[cDrSDrAdap].field[CustDesc].text = "You can use {i}ventriloquism{/i} as a spell like ability at will. {BR}{BR}At 13th level you can share this ability with any or all within 30 feet as a swift action."
  perform hero.childfound[cDrSDrAdap].assign[AbilType.SpellLike]

~ Set the information for holder Energy Immunity
  hero.childfound[cDrSEneImm].field[livename].text = "Immunity to Electricity"
  hero.childfound[cDrSEneImm].field[xSumm].text = "You are immune to electricity damage."]]></eval>
    <eval phase="UserPreLv" priority="10000">~ Add our class skills
   perform hero.child[cHelpDrS].assign[ClassSkill.kPerfSing]
   perform hero.child[cHelpDrS].assign[ClassSkill.kBluff]
   perform hero.child[cHelpDrS].assign[ClassSkill.kSpellcr]</eval>
    <prereq message="Required Alignment: CG or CN">
      <validate>validif (hero.tagis[Alignment.Good] + hero.tagis[Alignment.Chaotic] = 2)
 validif (hero.tagis[Alignment.NeutralGE] + hero.tagis[Alignment.Chaotic] = 2)</validate>
      </prereq>
    </thing>
