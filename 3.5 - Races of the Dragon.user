  <thing id="cDrgnDvote" name="Dragon Devotee" description="An individual (usually a warrior) who has studied the Way of the Dragon and has embarked on the path of becoming Draconic." compset="ClassLevel" maxlimit="5">
    <usesource source="RoD"/>
    <tag group="ClassType" tag="Prestige"/>
    <bootstrap thing="cHelpDDv"></bootstrap>
    <link linkage="helper" thing="cHelpDDv"/>
    <pickreq thing="lDraconic"/>
