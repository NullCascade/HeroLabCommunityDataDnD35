  <thing id="cDDvCha" name="Ability Boost: Charisma +2" description="Adds +2 to your Charisma." compset="ClSpecial">
    <tag group="AbilType" tag="Extra" name="Extraordinary Ability" abbrev=" (Ex)"/>
    <tag group="ClSpecWhen" tag="1"/>
    <tag group="SpecSource" tag="cHelpDDv"/>
    <tag group="Helper" tag="SpecUp"/>
    <eval phase="PreAttr" priority="10000"><![CDATA[
      ~ If we're not shown, just get out now
      doneif (tagis[Helper.ShowSpec] = 0)

      hero.child[aCHA].field[aNormMod].value = hero.child[aCHA].field[aNormMod].value + 2]]></eval>
    </thing>
  <thing id="cDDvNatA" name="Natural Armor Boost" description="Adds to your natural armor class." compset="ClSpecial">
    <tag group="AbilType" tag="Extra" name="Extraordinary Ability" abbrev=" (Ex)"/>
    <tag group="ClSpecWhen" tag="1" name="1" abbrev="1"/>
    <tag group="SpecSource" tag="cHelpDDv"/>
    <eval phase="PostLevel" priority="10000"><![CDATA[
      ~ Generate our new name
      var level as number
      level = field[xTotalLev].value
      field[livename].text = "Natural Armor +"
      var total as number
      total = 1
      
      ~ Note: This power increases our natural armor, it doesn't just add
      ~ a nonstackable bonus.
