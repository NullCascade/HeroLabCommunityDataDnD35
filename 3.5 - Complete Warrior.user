 uses = 2
else
 uses = 1
endif

field[hTotal].value = uses

var rounds as number

rounds = 3 + hero.child[aCHA].field[aModBonus].value
rounds = maximum(rounds, 3)

field[livename].text = field[name].text & " (+" & rounds & " rounds)"]]></eval>
    </thing>
