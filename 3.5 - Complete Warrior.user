    <eval phase="PostAttr" priority="10000"><![CDATA[
      ~ Generate our new name
      var level as number
      level = field[xTotalLev].value
      field[livename].text = "Kiai Smite ("
      var total as number
      if (level < 5) then
        total = 1
      elseif (level < 12) then
        total = 2
      elseif (level < 17) then
        total = 3
      else
        total = 4
        endif
   field[livename].text = field[livename].text & total & "/day)"

      doneif (tagis[Helper.SpcDisable] <> 0)

   hero.child[xKiaiSmite].field[hTotal].value += total
   hero.child[xKiaiSmite].field[Value].value += level]]></eval>
