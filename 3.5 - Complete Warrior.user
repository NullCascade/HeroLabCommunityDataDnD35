  <thing id="cOBIGrWeFo" name="Greater Weapon Focus" description="At 4th level, an Order of the Bow initiate gains the Greater Weapon Focus feat with a single ranged weapon for which he has taken the Weapon Focus feat even if he has not attained 8th level as a fighter." compset="ClSpecial">
    <comment><![CDATA[
        var result as number
        result = assign[thing.skipprereq]


      ~ If we're disabled, do nothing
      if (tagis[Helper.FtDisable] <> 0) then
        done
        endif

      ~ If we haven't chosen anything, get out now
      if (field[fGrWepFoc].ischosen = 0) then
        done
        endif

      ~ Assign the appropriate tag to all weapons that meet the criteria
      var result as number
      var id as string
      id = field[fChosen].chosen.idstring
      foreach pick in hero where "field.[fGrWepFoc]." & id
        result = eachpick.assign[Broadcast.WepFocus]
        nexteach

      ~ Set our 'short name'
      if (field[fChosen].ischosen <> 0) then
        field[fShortName].text = "Focus: " & field[fChosen].chosen.field[name].text

        ~ Forward the weapon focus tag for the weapon to the hero
        result = field[fChosen].chosen.forward[WepFocus.?]
        endif]]></comment>
