      ~ Generate our new name
      var level as number
      level = hero.child[cHelpJus].field[cTotalLev].value
      field[livename].text = "Street Savvy +"
      var total as number
      if (level > 8) then
        total = 6
      elseif (level > 5) then
        total = 4
      elseif (level > 0) then
        total = 2
        endif
      field[livename].text = "Street Savvy +" & total & " "
      field[CustDesc].text = "+" & total & " to Gather Information checks while in pursuit of a criminal"]]></eval>
    </thing>
