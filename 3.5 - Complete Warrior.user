    <tag group="Helper" tag="RemoveCast"/>
    <tag group="ClVaryName" tag="Replace"/>
    <bootstrap thing="cPalBleWpn"></bootstrap>
    <bootstrap thing="cPalDivMig"></bootstrap>
    <bootstrap thing="cPalTenMou"></bootstrap>
    <bootstrap thing="cPalHolySw"></bootstrap>
    <link linkage="varies" thing="cHelpPal"/>
    </thing>
