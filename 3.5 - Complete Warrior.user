    </thing>
  <thing id="fGr2WepDef" name="Greater Two-weapon Defense" description="When fighting with two weapons, your defenses are extraordinarily strong.\n\n{b}Prerequisites{/b}: Dex 19, Improved Two-Weapon Defense, Two-Weapon Defense, Two Weapon Fighting, Base attack bonus +11.\n\n{b}Benefit{/b}: When wielding two weapons (not including natural weapons or unarmed strikes), you gain a +3 shield bonus to your AC.\n\nWhen you are fighting defensively or using the total defense action, this shield bonus increases to +6.\n\n{b}Special{/b}: A fighter may select Greater Two-Weapon Defense as one of his fighter bonus feats.\n\n{b}Source{/b}: Complete Warrior" compset="Feat" summary="+3 shield bon when wielding 2 weapons or dbl weap, +6 when fight defensively." uniqueness="useronce">
    <usesource source="CompWarrio"/>
    <tag group="fCategory" tag="General" name="General" abbrev="General"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="Helper" tag="FeatUnique" name="FeatUnique" abbrev="FeatUnique"/>
    <tag group="BonusFor" tag="Fighter" name="Fighter" abbrev="Fighter"/>
    <eval phase="PreLevel" priority="20000"><![CDATA[~Greater Two Weapon Defense

      
      ~ If we're disabled, do nothing
      if (tagis[Helper.FtDisable] <> 0) then
        done
        endif

      ~ Check to see if we have something equipped in each hand
      if (hero.tagis[Hero.EquipMain] + hero.tagis[Hero.EquipOff] < 2) then
        done
        endif

      ~ Check to see that we have at least two weapons equipped, or a double
      ~ weapon
      if (hero.tagcount[Hero.EquipWep] < 2) then
        if (hero.tagcount[Hero.EquipDbl] = 0) then
          done
          endif
        endif

      ~ Check to see if our Unarmed Strike is selected in either main or off
      ~ hands
      if (hero.child[wUnarmed].tagis[Hero.MainHand] + hero.child[wUnarmed].tagis[Hero.OffHand] > 0) then
        done
        endif

      ~ Otherwise, add a +3 Shield bonus to our AC
      hero.child[ArmorClass].field[tACShield].value = maximum(hero.child[ArmorClass].field[tACShield].value, 3)]]></eval>
    <eval phase="UserPreLv" index="2"><![CDATA[~ Done by Lawful_G
~ Don't show the previous version of 2 weapon defense, to avoid clutter on the Specials tab.

 perform hero.childfound[fImp2WeDef].delete[Helper.ShowSpec]]]></eval>
    <exprreq message="Two Weapon Defense Required."><![CDATA[#hasfeat[fTwoWepDef] <> 0]]></exprreq>
    <exprreq message="Base attack bonus +11 required." iserror="no"><![CDATA[child[Attack].field[tAtkBase].value >= 11]]></exprreq>
    <exprreq message="Dexterity 19 required." iserror="no"><![CDATA[child[aDEX].field[aFinalVal].value >= 19]]></exprreq>
    <exprreq message="Two-Weapon Fighting required." iserror="no"><![CDATA[#hasfeat[fTwoWep] <> 0]]></exprreq>
    <exprreq message="Improved Two Weapon Defense required."><![CDATA[#hasfeat[fImp2WeDef] <> 0]]></exprreq>
    </thing>
  <thing id="fImp2WeDef" name="Improved Two-weapon Defense" description="You gain a significant defensive advantage while fighting with two weapons.\n\n{b}Prerequisites{/b}: Dex 17, Two-Weapon Fighting, Two Weapon Defense, Base attack bonus +6.\n\n{b}Benefit{/b}: When weilding two weapons (not including natural weapons or unarmed strikes), you gain a +2 shield bonus to your armor class.\n\nWhen you are fighting defensively or using the total defense action, this shield bonus increases to +4\n\n{b}Special{/b}: A fighter may select Improved Two-Weapon Defense as one of his fighter bonus feats.\n\n{b}Source{/b}: Complete Warrior" compset="Feat" summary="+2 shield bon when wielding 2 weapons or dbl weap, +4 when fight defensively." uniqueness="useronce">
