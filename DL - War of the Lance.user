    </thing>
  <thing id="fMimicWL" name="Mimic" description="You possess a natural talent for impersonation.\n\n{b}Benefit{/b}: You gain a +2 bonus on Disguise and Perform skill checks." compset="Feat" uniqueness="useronce">
