    <eval phase="UserPostAt" priority="10000"><![CDATA[
var bonus as number
bonus = maximum(round(#levelcount[Master]/2, 0, -1), 1)

var duration as number
duration = hero.child[aCHA].field[aModBonus].value

field[xSumm].text = "" & bonus & " allies watch 1 rd, +2 morale bon to save, att, & dam for " & duration & " rds(DC15 Perform)."]]></eval>
