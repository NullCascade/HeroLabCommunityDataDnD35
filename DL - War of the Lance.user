  <thing id="fQuickThWL" name="Quick Thinking" description="You react quickly to danger.\n\n{b}Benefit{/b}: You gain a +2 bonus to Initiative rolls and a +2 bonus to all Spot skill checks." compset="Feat" uniqueness="useronce">
