  <thing id="cMWGloDiv" name="Glory of the Divine" description="A mystic wanderer who wears no armor gains a sacred (or profane, if her patron deity is evil) bonus to AC equal to her Charisma bonus (if any)." compset="ClSpecial" summary="Gain AC bonus equal to Charisma bonus.">
    <usesource source="MagFaerun"/>
    <tag group="SpecSource" tag="cHelpMWa"/>
    <tag group="ClSpecWhen" tag="1"/>
    <tag group="AbilType" tag="Super"/>
    <eval phase="PostAttr" priority="10000"><![CDATA[doneif (hero.tagis[Hero.EquipArmor] + hero.tagis[Hero.EquipShld] > 0)

var bonus as number
      bonus = hero.child[aCHA].field[aModBonus].value

      hero.child[ArmorClass].field[Bonus].value += bonus]]></eval>
    </thing>
  <thing id="cMWSleep" name="Sleep" description="The mystic wanderer can use sleep once per day as a sorcerer equal to her mystic wanderer level plus her highest divine spellcaster level (DC = 11 + Cha modifier)." compset="ClSpecial" summary="Use {i}Sleep{/i} 1/day.">
    <fieldval field="hTotal" value="1"/>
    <usesource source="MagFaerun"/>
    <tag group="ClSpecWhen" tag="1"/>
    <tag group="Helper" tag="ShowCharge"/>
    <tag group="SpecSource" tag="cHelpMWa"/>
    <tag group="AbilType" tag="SpellLike"/>
    <eval phase="PostAttr" priority="11000"><![CDATA[var DC as number

DC = 11 + hero.child[aCHA].field[aModBonus].value

field[livename].text = "Sleep (DC " & DC & ")"]]></eval>
    </thing>
  <thing id="cMWLorNat" name="Lore of Nature" description="At 2nd level, the mystic wanderer gains a +2 competence bonus on all Profession (herbalist) and Knowledge (nature) checks." compset="ClSpecial" summary="+2 bonus to Profession (herbalist) and Knowledge (nature) checks.">
    <usesource source="MagFaerun"/>
    <tag group="SpecSource" tag="cHelpMWa"/>
    <tag group="ClSpecWhen" tag="2"/>
    <eval phase="First" priority="5000">#skillbonus[kProfHerb] += 2
#skillbonus[kKnowNat] += 2</eval>
    </thing>
  <thing id="cMWGemMag" name="Gem Magic" description="A 3rd-level mystic wanderer learns the secret of gem magic, as described in the previous chapter. She gains the Attune Gem feat, and she can use the feat to store any spell she can cast, whether arcane or divine." compset="ClSpecial" summary="Gain {i}Attune Gem{/i} as a bonus feat; store spells in gem.">
    <usesource source="MagFaerun"/>
    <tag group="SpecSource" tag="cHelpMWa"/>
    <tag group="ClSpecWhen" tag="3"/>
    <tag group="AbilType" tag="Super"/>
    <bootstrap thing="fAttunGem">
      <containerreq phase="First" priority="500"><![CDATA[count:Classes.MysticWan >= 3]]></containerreq>
      <autotag group="thing" tag="skipprereq"/>
      </bootstrap>
    </thing>
