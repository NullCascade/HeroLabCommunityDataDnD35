  <thing id="cdMental" name="Mentalism" description="{b}Dieties:{/b} None (Mystic Only)\n\n{b}Granted Power:{/b} Gain a +2 bonus on Bluff, Diplomacy, and Sense Motive checks. Gain a +2 bonus on Will saves against enchantment spells and effects.\n\n{b}Mentalism Domain Spells{/b}\n {b}1{/b}   Command\n {b}2{/b}   Detect thoughts\n {b}3{/b}   Hold person\n {b}4{/b}   Discern lies\n {b}5{/b}   Greater command\n {b}6{/b}   Hold monster\n {b}7{/b}   Mass hold person\n {b}8{/b}   Mass charm monster\n {b}9{/b}   Dominate monster" compset="ClerDomain" uniqueness="unique">
