  <thing id="cNblBonClS" name="Bonus Class Skill" description="At 1st level, a noble may designate any one cross-class skill as a class skill. This represents an area of study the noble character has pursued on his own." compset="ClSpecial" summary="Add a cross-class skill as a class skill.">
    <fieldval field="usrCandid1" value="component.BaseSkill &amp; !thingid.kAppraise &amp; !thingid.kBluff &amp; !thingid.kDiplomacy &amp; !thingid.kGatherInf &amp; !thingid.kIntim &amp; !thingid.kListen &amp; !thingid.kRide &amp; !thingid.kSenseMot &amp; !thingid.kSpeakLang"/>
    <tag group="SpecSource" tag="cHelpNbl"/>
    <tag group="ChooseSrc1" tag="Hero"/>
    <tag group="ClSpecWhen" tag="1" name="1" abbrev="1"/>
    <bootstrap thing="xFavor"></bootstrap>
    <eval phase="UserPostLv" priority="1000"><![CDATA[doneif (field[usrChosen1].ischosen = 0)

var skill as string
skill = field[usrChosen1].chosen.idstring
var srchexpr as string
srchexpr = "thingid." & skill
 var index as number 
 index = hero.child[cHelpNbl].field[cClsIndex].value

foreach pick in hero from BaseSkill where srchexpr
 eachpick.field[kClass].piecewise[index,1] = 1
nexteach]]></eval>
    </thing>
