    <link linkage="helper" thing="cHelpLeT"/>
    <exprreq message="Base attack bonus +5 required."><![CDATA[child[Attack].field[tAtkBase].value >= 5]]></exprreq>
    <exprreq message="Diplomacy 4 ranks required."><![CDATA[#skillranks[kDiplomacy] >= 4]]></exprreq>
    <exprreq message="Leadership required."><![CDATA[#hasfeat[fLeader] <> 0]]></exprreq>
    </thing>
  <thing id="cLeTLdBon1" name="Leadership Bonus +1" description="At 1st level, a legendary tactician gains a +1 bonus to his leadership score, enabling him to attract more powerful cohorts and followers. This bonus increases to +2 at 3rd level, +3 at 5th level, +4 at 7th level, and +5 at 9th level." compset="ClSpecial" summary="Gain listed bonus to Leadership score." sortorder="1">
    <tag group="ClSpecWhen" tag="1"/>
    <tag group="SpecSource" tag="cHelpLeT"/>
    <tag group="AbilType" tag="Extra"/>
    <eval phase="UserPostLv" priority="10000"><![CDATA[~ Generate our new name
      var level as number
      level = field[xTotalLev].value

      var total as number
      if (level >= 9) then
        total = 5
      elseif (level >= 7) then
        total = 4
      elseif (level >= 5) then
        total = 3
      elseif (level >= 3) then
        total = 2
      else
        total = 1
      endif

      field[livename].text = "Leadership Bonus +" & total & ""]]></eval>
    </thing>
