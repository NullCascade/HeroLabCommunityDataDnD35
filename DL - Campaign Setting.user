        total = 1
      elseif (level = 12) then
        total = 1
      elseif (level = 13) then
        total = 1
      elseif (level = 14) then
        total = 2
      elseif (level = 15) then
        total = 2
      elseif (level = 16) then
        total = 2
      elseif (level = 17) then
        total = 3
      elseif (level = 18) then
        total = 3
      elseif (level = 19) then
        total = 3
      elseif (level = 20) then
        total = 4
      else
        total = 0
        endif

~ Set our name
   if (level < 14) then
      field[livename].text = "Inspire Greatness (" & total & " ally)"
   elseif (level >= 14) then
      field[livename].text = "Inspire Greatness (" & total & " allies)"
  endif

~ Set our description
   if (level < 14) then
      field[xSumm].text = "" & total & " ally gets 2d6 temp Hp, +2 comp bonus to hit, +2 morale bonus to saves."
   elseif (level >= 14) then
      field[xSumm].text = "" & total & " allies get 2d6 temp Hp, +2 comp bonus to hit, +2 morale bonus to saves."
