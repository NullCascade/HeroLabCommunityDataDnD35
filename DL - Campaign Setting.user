  <thing id="cdForgeDLC" name="Forge" description="{b}Diety:{/b} Reorx\n\n{b}Granted Power:{/b} You gain a +2 insight bonus to Craft and Appraise checks related to stone or metal items.\n\n{b}Forge Domain Spells{/b}\n {b}1{/b}   Magic Weapon\n {b}2{/b}   Heat Metal\n {b}3{/b}   Keen edge\n {b}4{/b}   Minor creation\n {b}5{/b}   Wall of iron\n {b}6{/b}   Major creation\n {b}7{/b}   Hardening\n {b}8{/b}   Repel metal or stone\n {b}9{/b}   Iron body" compset="ClerDomain" uniqueness="unique">
