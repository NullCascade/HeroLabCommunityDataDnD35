    <eval phase="PostLevel" priority="10000"><![CDATA[      ~ Set up our damage reduction
      #applydr[xDamRdMag, 10]

      ~ Set up our spell resistance
      var damage as number

      if (hero.child[Totals].field[tHitDice].value >= 11) then
        damage = (hero.child[Totals].field[tHitDice].value - 10) + 20
      else
        damage = 20
      endif

      #applysr[damage]]]></eval>
    <prereq message="Must be Evil.">
      <validate>@valid = tagis[Alignment.Evil]
        if (@valid = 0) then
          if (tagcount[Alignment.?] = 0) then
            @valid = 1
            endif
          endif
        if (@ispick = 0) then
          done
          endif
        if (@valid = 0) then
          panelvalid[basics] = 0
          endif</validate>
      </prereq>
    </thing>
