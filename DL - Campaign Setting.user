    <usesource source="DLCS" parent="pDL" name="Dragonlance Campaign Setting"/>
    <tag group="Helper" tag="ShowCharge" name="ShowCharge" abbrev="ShowCharge"/>
    <tag group="SpecSource" tag="cHelpNbl"/>
