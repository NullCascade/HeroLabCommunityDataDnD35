  <thing id="cRiZGathFo" name="Gather Followers" description="The righteous zealot begins to attract a small group of loyal followers, granting the zealot the Leadership feat. At 5th level he gains a +1 bonus on his leadership score, which increases to +2 at 7th and +3 at 9th level." compset="ClSpecial" summary="Gain Leadership feat with listed bonus to score." sortorder="3">
    <tag group="ClSpecWhen" tag="3"/>
    <tag group="SpecSource" tag="cHelpRiZ"/>
    <tag group="AbilType" tag="Extra"/>
    <bootstrap thing="fLeader">
      <containerreq phase="First" priority="500"><![CDATA[count:Classes.RightZeal >= 3]]></containerreq>
      </bootstrap>
    <eval phase="PostAttr" priority="10000"><![CDATA[~ Generate our new name
      var level as number
      level = field[xTotalLev].value

      var total as number
      if (level >= 9) then
        total = 3
      elseif (level >= 7) then
        total = 2
      elseif (level >= 5) then
        total = 1
      else
        total = 0
        done
      endif

      field[livename].text = "Gather Followers +" & total & ""]]></eval>
