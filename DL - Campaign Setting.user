      ~ If we're not shown, just get out now
      if (tagis[Helper.ShowSpec] = 0) then
        done
        endif

      ~ Adjust our total bonus
      var bonus as number
      if (field[xTotalLev].value >= 7) then
        bonus = 3
      elseif (field[xTotalLev].value >= 4) then
        bonus = 2
      else
