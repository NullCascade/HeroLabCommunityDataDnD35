  <thing id="cdLiberty" name="Liberation" description="{b}Diety:{/b} Gilean\n\n{b}Granted Power:{/b} You gain a +2 morale bonus to all saves vs Enchantment spells or effects.\n\n{b}Liberation Domain Spells{/b}\n {b}1{/b}   Remove fear\n {b}2{/b}   Remove paralysis\n {b}3{/b}   Remove curse\n {b}4{/b}   Freedom of movement\n {b}5{/b}   Break enchantment\n {b}6{/b}   Greater dispelling\n {b}7{/b}   Refuge\n {b}8{/b}   Mind blank\n {b}9{/b}   Unbinding" compset="ClerDomain" uniqueness="unique">
