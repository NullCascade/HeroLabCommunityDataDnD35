    <tag group="Domain" tag="Necromancy" name="Necromancy" abbrev="Necromancy"/>
    <tag group="SecClsAllw" tag="Necromancy"/>
    <bootstrap thing="cdNecRebuk"></bootstrap>
    </thing>
  <thing id="cdNecRebuk" name="Rebuke Undead (Su)" description="You can rebuke, command, or bolster undead as an evil cleric. Use this ability a number of times per day equal to 3 + your Charisma modifier. This is a supernatural ability.\n\n5+ ranks in Knowledge (Religion) give you a +2 bonus to turning." compset="Special" summary="You can rebuke, command, or bolster undead." uniqueness="unique">
    <fieldval field="xSource" value="Necromancy Domain"/>
    <usesource source="DLCS"/>
    <tag group="SpecSource" tag="ClericDom"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="Helper" tag="ShowCharge"/>
    <eval phase="PostAttr" priority="10000" index="2">~ We can Turn 3 + Charisma modifier times per day.
      var total as number
      field[hTotal].value += hero.child[aCHA].field[aModBonus].value + 3</eval>
    <eval phase="PostLevel" priority="20000"><![CDATA[
      ~ If our value is 0, we have no levels, so get out now
      if (field[Value].value = 0) then
        done
        endif
      var result as number
      result = assign[Helper.ShowSpec]
      result = assign[Helper.ShowCharge]

      ~ This character can turn undead
      result = hero.assign[Hero.TurnUndead]

      ~ Set our name properly
      var v_turnname as string
      call cClrTurnNm
      field[livename].text = v_turnname
      
      ~ Append our level to the description.
      field[CustDesc].text = field[descript].text & "{br}{br}Your effective level for turning is " & field[Value].value & "."]]></eval>
    </thing>
  <thing id="cdPassDLCS" name="Passion" description="{b}Diety:{/b} Sirrion\n\n{b}Granted Power:{/b} For a total time per day of 1 round per cleric level you possess, you can act as if you were under the effects of the {i}rage{/i} spell. This granted power is a supernatural ability.\n\n{b}Passion Domain Spells{/b}\n {b}1{/b}   Random action\n {b}2{/b}   [Tasha&apos;s] hideous laughter\n {b}3{/b}   Rage\n {b}4{/b}   Crushing despair\n {b}5{/b}   Fear\n {b}6{/b}   Greater heroism\n {b}7{/b}   Song of discord\n {b}8{/b}   [Otto&apos;s] irresistable dance\n {b}9{/b}   Weird" compset="ClerDomain" uniqueness="unique">
    <usesource source="DLCS"/>
    <tag group="Domain" tag="Passion" name="Passion" abbrev="Passion"/>
    <tag group="SecClsAllw" tag="Passion"/>
