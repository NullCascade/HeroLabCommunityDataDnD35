  <thing id="cdPasRage" name="Rage (1 round/level/day) (Su)" description="For a total time per day of 1 round per cleric level you possess, you can act as if you were under the effects of the {i}rage{/i} spell. This granted power is a supernatural ability." compset="Special" summary="You can act as though under the affects of a {i}rage{/i} spell">
    <fieldval field="xSource" value="Passion Domain"/>
    <usesource source="DLCS"/>
    <tag group="Helper" tag="ShowSpec" name="ShowSpec" abbrev="ShowSpec"/>
    <tag group="SpecSource" tag="ClericDom" name="Cleric Domain" abbrev="Cleric Domain"/>
    <tag group="Helper" tag="ShowCharge" name="ShowCharge" abbrev="ShowCharge"/>
    <eval phase="UserPostLv" priority="10000"><![CDATA[~ Calculate our total duration
  var level as number

  foreach pick in hero from BaseClHelp where "SecClsAllw.Passion"
   level = eachpick.field[cTotalLev].value
  nexteach

  field[hTotal].value += level]]></eval>
    </thing>
  <thing id="cdPestDLCS" name="Pestilence" description="{b}Diety:{/b} Morgion\n\n{b}Granted Power:{/b} You are immune to the effects of all diseases, though you can still carry infectious diseases\n\n{b}Pestilence Domain Spells{/b}\n {b}1{/b}   Doom\n {b}2{/b}   Summon monster II (1d3 fiendish dire rats only)\n {b}3{/b}   Contagion\n {b}4{/b}   Poison\n {b}5{/b}   Plague of rats\n {b}6{/b}   Eyebite\n {b}7{/b}   Scourge\n {b}8{/b}   Create greater undead\n {b}9{/b}   Otyugh swarm" compset="ClerDomain" uniqueness="unique">
