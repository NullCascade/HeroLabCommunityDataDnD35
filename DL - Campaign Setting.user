    <tag group="SpecSource" tag="cHelpRiZ"/>
    <tag group="AbilType" tag="Extra"/>
    <eval phase="UserPostLv" priority="10000"><![CDATA[~ If we're not shown, do nothing
      if (tagis[Helper.ShowSpec] = 0) then
         done
      endif

~ Generate our new name
      var level as number
      level = field[xTotalLev].value

      var total as number
      total = round(level/2, 0, -1)

      field[xSumm].text = "+" & total & " bonus to saves vs Enchantment spells or effects."]]></eval>
