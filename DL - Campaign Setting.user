    <tag group="Helper" tag="ShowCharge" name="ShowCharge" abbrev="ShowCharge"/>
    <tag group="SpecSource" tag="DethKnight"/>
    <tag group="AbilType" tag="Super"/>
    </thing>
  <thing id="xDKniPowWo" name="Power Word" description="A death knight of at least can use a {i}power word{/i} once per day, as a wizard of CL equal to the death knight&apos;s HD. A death knight of only 14 HD or less can use {i}power word, blind{/i}, while one of 15 or more may use {i}power word, stun{/i} and one of at least 17 HD can use {i}power word, kill{/i} instead." compset="Special" summary="Use a power word spell with CL equal to your HD.">
    <fieldval field="hTotal" value="1"/>
    <usesource source="DLCS"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="SpecSource" tag="DethKnight"/>
    <tag group="SpecType" tag="SpellLike"/>
    <tag group="Helper" tag="ShowCharge"/>
    <tag group="AbilType" tag="SpellLike"/>
    <eval phase="Render"><![CDATA[  if (herofield[tHitDice].value >= 17) then
    field[livename].text = field[name].text & ", Blind, Kill or Stun (" & field[hTotal].value & "/day)"
  elseif (herofield[tHitDice].value >= 15) then
    field[livename].text = field[name].text & ", Blind or Stun (" & field[hTotal].value & "/day)"
  else
    field[livename].text = field[name].text & ", Blind (" & field[hTotal].value & "/day)"
  endif]]></eval>
    </thing>
  <thing id="xDKniSymbo" name="Symbol" description="A death knight of at least 9 HD can use a {i}symbol{/i} once per day, as a wizard of CL equal to the death knight&apos;s HD. A death knight of only 9 HD can use {i}symbol of pain{/i}, while one of 11 or more may use {i}symbol of fear{/i}." compset="Special" summary="Use a symbol spell with CL equal to your HD.">
    <fieldval field="hTotal" value="1"/>
    <usesource source="DLCS"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="SpecSource" tag="DethKnight"/>
    <tag group="SpecType" tag="SpellLike"/>
    <tag group="AbilType" tag="SpellLike"/>
    <tag group="Helper" tag="ShowCharge"/>
    <eval phase="Render"><![CDATA[  if (herofield[tHitDice].value >= 11) then
    field[livename].text = field[name].text & " of Fear or Pain (" & field[hTotal].value & "/day)"
  elseif (herofield[tHitDice].value >= 9) then
    field[livename].text = field[name].text & " of Pain (" & field[hTotal].value & "/day)"
  else
    perform delete[Helper.ShowSpec]
    perform delete[Helper.ShowCharge]
    perform assign[Helper.SpcDisable]
  endif]]></eval>
    </thing>
