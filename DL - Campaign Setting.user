~ Get charges
      var total as number
      if (level = 1) then
        total = 0
      elseif (level = 2) then
        total = 1
      elseif (level = 3) then
        total = 1
      elseif (level = 4) then
        total = 1
      elseif (level = 5) then
        total = 2
      elseif (level = 6) then
        total = 2
      elseif (level = 7) then
        total = 2
      elseif (level = 8) then
        total = 2
      elseif (level = 9) then
        total = 3
      elseif (level = 10) then
        total = 3
      elseif (level = 11) then
        total = 3
      elseif (level = 12) then
        total = 3
      elseif (level = 13) then
        total = 4
      elseif (level = 14) then
        total = 4
      elseif (level = 15) then
        total = 4
      elseif (level = 16) then
        total = 4
      else
        total = 5
        endif
      field[hTotal].value = total

~ Set our name
      field[livename].text = "Inspire Confidence (" & allies & " allies)"

~ Set our description
      field[xSumm].text = "" & total & "/day grant allies +1 morale bonus to attack and damage, +2 to saves."]]></eval>
    </thing>
  <thing id="cNblConf2" name="Inspire Confidence 2/day" description="Twice per day the noble can inspire up to 1/2 his noble level in allies (round up), giving them a +1 morale bonus to attack and damage rolls and +2 morale bonus to all saves.\n\nThis lasts for 5 rounds and requires a full round action by the Noble. He cannot inspire greatness in himself, only in his allies." compset="ClSpecial" summary="Grants allies +1 to attack and damage rolls and +2 to all saves.">
