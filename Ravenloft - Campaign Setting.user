    <tag group="fCategory" tag="General"/>
    <tag group="Helper" tag="ShowSpec"/>
    </thing>
  <thing id="fRvnLunati" name="Lunatic" description="Your mind and body are tied to the cycles of the moon, making you more energetic and excitable as the moon waxes. This effect may be the result of subtle madness or a diluted supernatural heritage, such as Vistani blood.\n\n{b}Prerequisite{/b}: Chaotic alignment.\n\n{b}Benefit{/b}: You have a +1 bonus to all attack rolls, Fortitude and Reflex saves, and Charisma-modified skill checks whenever the moon is gibbous (more than half full). This bonus rises to +2 during the three-night period of the full moon. During the three-night period of the new moon, you suffer a -2 penalty to these rolls instead. The modifiers are reversed for Will saves: +2 during the new moon, -1 during the gibbous moon, and -2 during the full moon. This is an extraordinary quality." compset="Feat" summary="Your mind and body are tied to the cycles of the moon." uniqueness="useronce">
    <fieldval field="hName1" value="gibbous moon"/>
    <fieldval field="hName2" value="full moon"/>
    <usesource source="RavCamSet"/>
    <tag group="AbilType" tag="Extra"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="fCategory" tag="General"/>
    <tag group="Helper" tag="ShowCharge"/>
    <bootstrap thing="xRvnLunHlp"></bootstrap>
    <eval phase="PostAttr" priority="9000"><![CDATA[if (field[hIsOn1].value <> 0) then
 foreach pick in hero from BaseWep
  eachpick.field[wAttBonus].value += 1 
 nexteach
 hero.child[vFort].field[Bonus].value += 1
 hero.child[vRef].field[Bonus].value += 1
 hero.child[vWill].field[Bonus].value -= 1
 foreach pick in hero from BaseSkill
  if (eachpick.islinkage[skillattr] <> 0) then
   if (eachpick.linkage[skillattr].tagis[thingid.aCHA] <> 0) then
    eachpick.field[Bonus].value += 1
   endif
  endif
 nexteach
elseif (field[hIsOn2].value <> 0) then
 foreach pick in hero from BaseWep
  eachpick.field[wAttBonus].value += 2 
 nexteach
 hero.child[vFort].field[Bonus].value += 2
 hero.child[vRef].field[Bonus].value += 2
 hero.child[vWill].field[Bonus].value -= 2
 foreach pick in hero from BaseSkill
  if (eachpick.islinkage[skillattr] <> 0) then
   if (eachpick.linkage[skillattr].tagis[thingid.aCHA] <> 0) then
    eachpick.field[Bonus].value += 2
   endif
  endif
 nexteach
endif]]></eval>
    <exprreq message="Chaotic alignment required."><![CDATA[hero.tagis[Alignment.Chaotic] <> 0]]></exprreq>
    </thing>
  <thing id="xRvnLunHlp" name="Lunatic Helper" compset="Special">
