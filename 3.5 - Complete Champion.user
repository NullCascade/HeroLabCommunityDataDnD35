  <thing id="fFavWeapPr" name="Favored Weapon Proficiency" description="{b}Benefit{/b}: You gain Weapon Proficiency with your deity&apos;s favored weapon." compset="Feat" summary="Weapon Focus and Martial Weapon Proficiency with your deity&apos;s favored weapon." uniqueness="unique">
    <tag group="Helper" tag="Helper" name="Helper" abbrev="Helper"/>
    <tag group="fCategory" tag="General" name="General" abbrev="General"/>
    <tag group="fShowWhat" tag="Weapons" name="All Weapons" abbrev="All Weapons"/>
    <eval phase="PreLevel" priority="5000"><![CDATA[
      ~ If we haven't chosen anything, get out now
      if (field[fChosen].ischosen = 0) then
        done
        endif

      ~ Forward the proficiency and weapon focus tags from that weapon to the
      ~ hero
      var result as number
      result = field[fChosen].chosen.forward[WepProf.?]

      ~ Assign those tags to each matching weapon that exists
      var id as string
      id = field[fChosen].chosen.idstring
      foreach pick in hero where "IsWeapon." & id
        result = eachpick.assign[Broadcast.WepProf]
        nexteach

      ~ Set our 'short name'
      if (field[fChosen].ischosen <> 0) then
        field[fShortName].text = "Favored Proficiency: " & field[fChosen].chosen.field[name].text
        endif]]></eval>
    </thing>
