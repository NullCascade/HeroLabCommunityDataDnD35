  <thing id="xUndVision" name="Underdark Vision" compset="Special">
    <tag group="SpecSource" tag="cHelpPal"/>
    <tag group="Helper" tag="ShowSpec"/>
    <eval phase="UserPostAt" priority="10000"><![CDATA[   perform delete[Helper.ShowSpec]

   if (hero.child[cPalUndKni].field[hIsOn1].value <> 0) then
~ Check to see if we have darkvision, if so increase the range by 30

     if (hero.childfound[rDarkVis].tagis[Helper.ShowSpec] <> 0) then
       hero.child[rDarkVis].field[Value].value += 30
       done

~ If we have low light but no darkvision, rename ourselves to darkvision 60 and add Showspec, also set the xSumm and CustDesc
     elseif (hero.childfound[rLowLight].tagis[Helper.ShowSpec] = 1) then
       if (hero.childfound[rDarkVis].tagis[Helper.ShowSpec] = 0) then
         field[livename].text = "Darkvision (60 ft)"
         field[CustDesc].text = "You can see in the dark (black and white vision only)."
         perform assign[Helper.ShowSpec]
         done
       endif

~ If we had neither, we rename ourselves to Low light vision and add showspec, also set the xSumm and CustDesc
     elseif (hero.childfound[rDarkVis].tagis[Helper.ShowSpec] + hero.childfound[rLowLight].tagis[Helper.ShowSpec] = 0) then
         field[livename].text = "Low-Light Vision"
         field[CustDesc].text = "See twice as far as a human in low light, distinguishing color and detail."
         perform assign[Helper.ShowSpec]
     endif
   endif]]></eval>
    </thing>
