    <eval phase="PreLevel" priority="5000">if (field[gIsEquip].value + hero.childfound[iRigWarBas].field[gIsEquip].value + hero.childfound[ioRigWarHe].field[gIsEquip].value = 3) then
     perform hero.childfound[xRigWarReg].assign[Helper.ShowSpec]
     perform hero.childfound[xRigWarReg].assign[Helper.ShowCharge]
   endif</eval>
