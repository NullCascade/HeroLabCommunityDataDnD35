    <tag group="SpecSource" tag="cHelpPaA"/>
    </thing>
  <thing id="cPaALore" name="Lore" description="You can recall legends or information regarding various topics, just like a bard can with bardic knowledge. To use this ability, make a lore check (1d20 + twice your Paragnostic apostle level + your Int modifier). Success grants you the same result as a bardic knowledge check would. If you have the bardic knowledge or lore ability from another class, your levels in those classes stack with your Paragnostic apostle levels for the purpose of this check." compset="ClSpecial" summary="Recall legends and obscure information, stacks with other lore abilities.">
    <tag group="ClSpecWhen" tag="1"/>
    <tag group="AbilType" tag="Extra"/>
    <tag group="SpecSource" tag="cHelpPaA"/>
    <tag group="Helper" tag="SpecUp"/>
    <bootstrap thing="xLore"></bootstrap>
    <eval phase="PostLevel" priority="10000"><![CDATA[
      ~our value is the bonus we get.  It is our level
      hero.child[xLore].field[Value].value += field[xTotalLev].value*2

  var bonus as number
  bonus = field[xTotalLev].value*2
  field[livename].text = "Lore +" & bonus & ""]]></eval>
    </thing>
  <thing id="cPaAAccRet" name="Accurate Retort" description="You gain a +1 circumstance bonus on your ranged attack roll with every ray spell that you aim at a creature with a natural armor bonus." compset="CustomSpec" summary="+1 circumstance bonus on attack rolls with rays vs foe with natural armor." uniqueness="unique">
