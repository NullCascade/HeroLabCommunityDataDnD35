    <eval phase="UserPostLv" priority="10001"><![CDATA[ if (field[gIsEquip].value <> 0) then
      perform hero.delete[Hero.Sturdy]
 endif

  if (container.ishero = 0) then
    if (container.parent.field[gIsEquip].value <> 0) then
      perform hero.delete[Hero.Sturdy]
    endif
  endif]]></eval>
    <eval phase="Final" priority="10500" index="2"><![CDATA[ if (field[gIsEquip].value <> 0) then
    var bonus as number
    bonus = hero.child[Speed].field[tSpeedMod].value
 
  ~ divide by 5, then round down
    bonus = round(bonus/5,0,-1)
 
  ~ and multiply by 5
    bonus *= 5
    bonus /= 2

  ~ We are extra slowed.
    hero.child[Speed].field[tSpeedMod].value = bonus

 endif

  if (container.ishero = 0) then
    if (container.parent.field[gIsEquip].value <> 0) then
      hero.child[Speed].field[tSpeedMod].value = (round(hero.child[Speed].field[tSpeedMod].value/5,0,-1) * 5) / 2
    endif
  endif]]></eval>
    <exprreq message="Exotic Armor Proficiency (Mountain Plate) required."><![CDATA[hero.tagis[User.MountPlate] <> 0]]></exprreq>
    </thing>
