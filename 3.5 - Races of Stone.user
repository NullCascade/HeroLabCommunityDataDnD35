    <tag group="BonusFor" tag="Fighter"/>
    <tag group="User" tag="ExoticProf" name="Exotic Proficiency"/>
    <eval phase="PreLevel" priority="5000" index="2"><![CDATA[
      ~ If we're disabled, do nothing
      if (tagis[Helper.FtDisable] <> 0) then
        done
        endif

      ~ If we haven't chosen anything, get out now
      if (field[fChosen].ischosen = 0) then
        done
        endif

      ~ Assign the appropriate tag to all armor that meet the criteria
      var id as string
      id = field[fChosen].chosen.idstring
      foreach pick in hero where "IsArmor." & id
        perform eachpick.assign[Helper.Proficient]
        nexteach

      ~ Set our 'short name'
      if (field[fChosen].ischosen <> 0) then
        field[fShortName].text = "Exotic Armor: " & field[fChosen].chosen.field[name].text
      endif

      ~ Forward the proficiency and weapon focus tags from that weapon to the
      ~ hero
      var result as number
      result = field[fChosen].chosen.forward[User.?]]]></eval>
    <exprreq message="Armor Proficiency (Any) required."><![CDATA[#hasfeat[fArmHeavy] + #hasfeat[fArmMedium] + #hasfeat[fArmLight] <> 0]]></exprreq>
    </thing>
  <thing id="fExShlProf" name="Exotic Shield Proficiency" description="Choose an exotic shield, such as a gauntlet shield or battle cloak. You are proficient with that type of exotic shield.\n\n{b}Prerequisites{/b}: Shield Proficiency, base attack bonus +1.\n\n{b}Benefit{/b}: You are proficient with a specific type of exotic shield and take no shield non proficiency penalties when you wear it (see Table 7&#150;2: Armor and Shields, page 158).\n\n{b}Normal{/b}: A character who is using a shield with which she is not proficient applies its armor check penalty on attack rolls and on all Strength- and Dexterity-based ability checks and skill checks.\n\n{b}Special{/b}: As a variant rule, the DM can allow fighters to choose one free Exotic Shield Proficiency feat instead of the Tower Shield Proficiency feat they receive at 1st level.\n\nA fighter may select Exotic Shield Proficiency as one of her fighter bonus feats (see page 38 of the Player&#146;s Handbook)." compset="Feat">
