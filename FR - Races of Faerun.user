  <thing id="fHaremTrai" name="Harem Trained" description="You have been trained to serve as a {i}jhasin{/i} (if male) or {i}jhasina{/i} (if female) and are well versed in song, music, dance, art, the recitation of great literature, the art of massage, and other duties of the harem.\n\n{b}Region:{/b} Calimshan.\n\n{b}Benefit:{/b} You receive a +2 bonus on Diplomacy and Perform checks.\n\n{b}Source:{/b} {i}Races of Faer&#251;n{/i}, 3.0 Edition" compset="Feat" summary="+2 Diplomacy and Perform Checks." uniqueness="unique">
    <usesource source="RoF"/>
    <tag group="fCategory" tag="Regional" name="Regional" abbrev="Region"/>
    <eval phase="UserPreAt" priority="1000">~ Add a +2 racial bonus to our Diplomacy and all Perform skills
#skillbonus[kDiplomacy] += 2
#skillbonus[AllPerform] += 2</eval>
    </thing>
  <thing id="fCaravan" name="Caravaneer" description="You are skilled at leading caravans along established trade routes.\n\n{b}Regions:{/b} Cormyr, Dalelands, Sembia, Thesk, Western Heartlands\n\n{b}Benefit:{/b} You receive a +2 bonus on all Handle Animal and Knowledge (geography) checks.\n\n{b}Source:{/b} {i}Races of Faer&#251;n{/i}, 3.0 Edition" compset="Feat" summary="+2 Handle Animal and Knowledge (Geography)." uniqueness="unique">
    <usesource source="RoF"/>
    <tag group="fCategory" tag="Regional" name="Regional" abbrev="Region"/>
