    <tag group="IsWeapon" tag="wMaceLight"/>
    <tag group="wClass" tag="OneHanded"/>
    <tag group="wProfReq" tag="Simple"/>
    </thing>
  <thing id="wArrowSea" name="Arrows, Sea" description="Arrow, Sea: These arrows, fletched by aquatic elves, are treated as masterwork, but they don&#146;t grant a +1 enhancement bonus on attack rolls. Instead, when fired from an aquatic longbow, they negate the &#150;2 penalty per 5 feet for making a ranged attack underwater." compset="Weapon" lotsize="20" stacking="merge">
    <fieldval field="gWeight" value="0.2"/>
    <fieldval field="gSizeCost" value="7"/>
    <fieldval field="stackQty" value="0"/>
    <usesource source="RoF"/>
    <tag group="WepProf" tag="wArrows" name="Arrows" abbrev="Arrows"/>
    <tag group="wCategory" tag="Ammunition" name="Ammunition" abbrev="Ammunition"/>
    <tag group="wClass" tag="Light" name="Light" abbrev="Light"/>
    <tag group="wCritMin" tag="20" name="20" abbrev="20"/>
