      field[xSumm].text = "Add {i}conj ice beast I-IV{/i}, {i}animate snow{/i} & {i}frostfell{/i} to spellbook/spells known."
   elseif (#levelcount[Frostmage] >= 7) then
      field[xSumm].text = "Add {i}conj ice beast I-III{/i} & {i}animate snow{/i} to spellbook/spells known."
   elseif (#levelcount[Frostmage] >= 5) then
      field[xSumm].text = "Add {i}conj ice beast I-II{/i} to spellbook/spells known."
   elseif (#levelcount[Frostmage] >= 3) then
      field[xSumm].text = "Add {i}conj ice beast I{/i} to spellbook/spells known."
   endif]]></eval>
