  <thing id="cTaBWinthe" name="Winterheart" description="At 10th level, a Talontar blightlord&#146;s infected blood effects a terrible change in her physiology. Her skin blackens and splits, becoming cold and slimy to the touch, although she does not bleed or suffer pain from this transformation.\n\nHer type changes to &#147;plant,&#148; which means (among other things) that she is no longer subject to poison, sleep, mind-affecting effects, paralysis, polymorphing, critical hits, sneak attacks, or spells and effects that affect humanoids only." compset="ClSpecial" summary="Talontar&apos;s infected blood gain the plant type but can still bleed and feel pain.">
    <tag group="ClSpecWhen" tag="10"/>
    <tag group="SpecSource" tag="cHelpTaB"/>
    <tag group="AbilType" tag="Extra"/>
    <bootstrap thing="typPlant">
      <containerreq phase="First" priority="1800"><![CDATA[count:Classes.Talontar >= 10]]></containerreq>
      </bootstrap>
    <eval phase="First" priority="50000"><![CDATA[doneif (hero.tagcount[Classes.Talontar] < 10)

~ assign correct Race tags
  perform hero.delete[Race.?]
  perform hero.assign[Race.typPlant]

~ remove other types and subtypes
  foreach pick in hero from BaseSpec where "thingid.styp? | thingid.typ? & !thingid.typPlant"
   perform each.delete[Helper.ShowSpec]
  nexteach]]></eval>
    </thing>
  <thing id="cdBlightbr" name="Blightbringer" description="{b}Dieties:{/b} Talona\n\n{b}Granted Power:{/b} Rebuke or command blightspawned creatures and evil-aligned animals or plants as an evil cleric rebukes undead. You may use this ability a number of times per day equal to 3 + your Charisma modifier. This is a supernatural ability.\n\n{b}Alteration Domain Spells{/b}\n {b}1{/b}   Hold Animal\n {b}2{/b}   Snilloc&apos;s Snowball Swarm\n {b}3{/b}   Contagion\n {b}4{/b}   Fear\n {b}5{/b}   Cone of Cold\n {b}6{/b}   Finger of Death\n {b}7{/b}   Command Plants\n {b}8{/b}   Horrid Wilting\n {b}9{/b}   Energy Drain" compset="ClerDomain" uniqueness="unique">
    <usesource source="pPGtF"/>
    <tag group="SecClsAllw" tag="Blightbr" name="Blightbringer"/>
    <tag group="Domain" tag="Alteration" name="Alteration" abbrev="Alteration"/>
    <tag group="SpecSource" tag="cHelpTaB"/>
    <bootstrap thing="xRebComBli"></bootstrap>
    <eval phase="Final" priority="12000" index="2"><![CDATA[doneif (hero.child[cTaBPreDom].field[usrChosen1].ischosen = 0)
var choice as string
choice = "thingid." & hero.child[cTaBPreDom].field[usrChosen1].chosen.idstring

foreach pick in hero from BaseClHelp where choice
 var lvl as number
 lvl = eachpick.field[cCasterLev].value
 if (eachpick.tagis[Classes.Cleric] = 0) then
 if (eachpick.tagis[Helper.HalfCaster] = 0) then
  eachpick.field[cSecMax].arrayvalue[1] += 1
  if (lvl >= 3) then 
   eachpick.field[cSecMax].arrayvalue[2] += 1
  endif
  if (lvl >= 5) then 
   eachpick.field[cSecMax].arrayvalue[3] += 1
  endif
  if (lvl >= 7) then 
   eachpick.field[cSecMax].arrayvalue[4] += 1
  endif
  if (lvl >= 9) then 
   eachpick.field[cSecMax].arrayvalue[5] += 1
  endif
  if (lvl >= 11) then 
   eachpick.field[cSecMax].arrayvalue[6] += 1
  endif
  if (lvl >= 13) then 
   eachpick.field[cSecMax].arrayvalue[7] += 1
  endif
  if (lvl >= 15) then 
   eachpick.field[cSecMax].arrayvalue[8] += 1
  endif
  if (lvl >= 17) then 
   eachpick.field[cSecMax].arrayvalue[9] += 1
  endif

 else
  if (lvl >= 4) then 
   eachpick.field[cSecMax].arrayvalue[1] += 1
  endif
  if (lvl >= 8) then 
   eachpick.field[cSecMax].arrayvalue[2] += 1
  endif
  if (lvl >= 11) then 
   eachpick.field[cSecMax].arrayvalue[3] += 1
  endif
  if (lvl >= 14) then 
   eachpick.field[cSecMax].arrayvalue[4] += 1
  endif  
 endif
 endif
nexteach]]></eval>
    <eval phase="First" priority="12000"><![CDATA[doneif (hero.child[cTaBPreDom].field[usrChosen1].ischosen = 0)
var choice as string
choice = "thingid." & hero.child[cTaBPreDom].field[usrChosen1].chosen.idstring

