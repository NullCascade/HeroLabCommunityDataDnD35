    <bootstrap thing="typUndead"></bootstrap>
    <eval phase="UserPostLv">~ Skill bonuses.
#skillbonus[kHide] += 8
#skillbonus[kIntim] += 8
#skillbonus[kListen] += 8
#skillbonus[kMoveSil] += 8
