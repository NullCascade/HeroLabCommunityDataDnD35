    <tag group="PowerReq" tag="S"/>
    <tag group="PowerReq" tag="Thrown"/>
    <tag group="PowerType" tag="Weapon"/>
    </thing>
  <thing id="irBlzngSun" name="Blazing Sun" description="This ring is made of polished fire opal and is always very warm to the touch, as though it has been lying in the sun for several hours. The wearer gains the fire subtype while wearing the ring.\n   Strong transmutation; CL 15th; Forge Ring, mantle of the fiery spirit; Price 135,000gp." compset="Ring" summary="Gain the fire subtype.">
    <fieldval field="gCost" value="135000"/>
    <usesource source="Sandstorm"/>
    <tag group="gType" tag="Ring"/>
    <tag group="Helper" tag="EquipAvail"/>
