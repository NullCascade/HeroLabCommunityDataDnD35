  <thing id="xImpHeaRes" name="Improved Heat Endurance" description="You have the specified Damage Resistance against Fire attacks." compset="Special" uniqueness="unique">
    <tag group="SpecSource" tag="Feat" name="Feat" abbrev="Feat"/>
    <bootstrap thing="xDamRsFire"></bootstrap>
    <eval phase="Final" priority="10100" index="2"><![CDATA[    ~ if we have no fire resistance, apply our ShowSpec tag and rename ourselves to Fire Resistance 5. Else rename the fire resistance thing to current value +5.
    if (hero.child[xDamRsFire].field[Value].value = 0) then
      perform assign[Helper.ShowSpec]
      field[livename].text = "Damage Resistance, Fire (5)"
    else
      var nat as number
      nat = hero.child[xDamRsFire].field[Value].value

      var total as number
      total = 5 + nat

      hero.child[xDamRsFire].field[livename].text = "Damage Resistance, Fire (" & total & ")"      
    endif]]></eval>
    </thing>
