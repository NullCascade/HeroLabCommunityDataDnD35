      level = field[xTotalLev].value
      if (level >= 9) then
       field[xSumm].text = "You can summon a chaotic evil outsider at +4 levels higher."
      elseif (level >= 6) then
       field[xSumm].text = "You can summon a chaotic evil outsider at +3 levels higher."
      elseif (level >= 3) then
       field[xSumm].text = "You can summon a chaotic evil outsider at +2 levels higher."
      else
        field[xSumm].text = "You are adept at casting summoing spells with chaotic evil outsiders."
      endif]]></eval>
    </thing>
  <thing id="cDemResist" name="Resistances" description="A demonologist who reaches 4th level gains acid resistance 10, cold resistance 10, fire resist- ance 10, and electricity resistance 20." compset="ClSpecial" summary="You gain Acid, Cold and Fire Resist 10 and Electricity Resistance 20.">
