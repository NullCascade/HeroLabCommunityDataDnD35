    <tag group="Helper" tag="ShowSpec"/>
    <tag group="fCategory" tag="Vile"/>
    <exprreq message="Base Attack +5 required."><![CDATA[child[Attack].field[tAtkBase].value >= 5]]></exprreq>
    <prereq message="Natural Attack Required." iserror="no" issilent="yes" ispanelhighlight="no">
