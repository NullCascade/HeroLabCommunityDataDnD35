        endif]]>
      <after name="Encumber Final"/>
      </eval>
    </thing>
  <thing id="cNinAcroba" name="Acrobatics" description="Starting at 6th level, a ninja gains a +2 bonus on Climb, Jump, and Tumble checks. This bonus increases to +4 at 12th level and +6 at 18th level." compset="ClSpecial" summary="Gain bonus to Climb, Jump, and Tumble checks.">
    <tag group="ClSpecWhen" tag="6"/>
    <tag group="SpecSource" tag="cHelpNin"/>
    <tag group="Helper" tag="SpecUp"/>
    <tag group="AbilType" tag="Extra"/>
    <eval phase="UserPostLv" priority="5000"><![CDATA[~ Get our level
      var level as number
      level = field[xTotalLev].value

~ Calculate our bonus
      var bonus as number
      if (level >= 18) then
        bonus = 6
        field[livename].text = "Acrobatics +6"
      elseif (level >= 12) then
        bonus = 4
        field[livename].text = "Acrobatics +4"
      elseif (level >= 6) then
        bonus = 2
        field[livename].text = "Acrobatics +2"
      else 
        bonus = 0
        field[livename].text = "Acrobatics"
      endif

      #skillbonus[kClimb] += bonus
      #skillbonus[kJump] += bonus
      #skillbonus[kTumble] += bonus]]></eval>
    </thing>
  <thing id="cNinKiDodg" name="{i}Ki{/i} Dodge" description="At 6th level and higher, a ninja can spend one daily use of her {i}ki{/i} power to cause an attack against her to miss when it might otherwise hit. When a ninja activates this ability, her outline shifts and wavers, granting her concealment (20% miss chance) against all attacks for 1 round. Using this ability is a swift action that does not provoke attacks of opportunity.\n\n{i}See invisibility{/i} has no effect on concealment granted by the {i}ki{/i} dodge ability, but {i}true seeing{/i} negates the miss chance. This concealment does not stack with that caused by other effects that grant concealment or by spells such as {i}blink{/i} or {i}displacement{/i}." compset="ClSpecial" summary="Swift, gain concealment (20% miss chance) for 1 rd.">
    <tag group="SpecSource" tag="cHelpNin"/>
    <tag group="Helper" tag="ShowCharge"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="ClSpecWhen" tag="6"/>
    <eval phase="UserPostAt" priority="200"><![CDATA[  field[hTotal].value = hero.child[cNinKiPwr].field[hTotal].value
  hero.child[cNinKiPwr].field[hChildUsed].value += field[hUsed].value

~ Get our level
      var level as number
      level = field[xTotalLev].value

~ Change name after 18th level
      if (level >= 18) then
        field[livename].text = "Greater {/i}Ki{/i} Dodge"
        field[xSumm].text = "Swift, gain full concealment (50% miss chance) for 1 rd."
      endif]]></eval>
    </thing>
  <thing id="cNinSpdCli" name="Speed Climb" description="A ninja of 7th level or higher can scramble up or down walls and slopes with great speed. She can climb at her speed as a move action with no penalty; however, she must begin and end the round on a horizontal surface (such as the ground or a rooftop). If she does not end her movement on a horizontal surface, she falls, taking falling damage as appropriate for her distance above the ground.\n\nA ninja needs only one free hand to use this ability. This ability can be used only if a ninja is wearing no armor and is carrying no more than a light load." compset="ClSpecial" summary="Climb at full speed with no pen, must end turn on horizontal surface or fall.">
    <tag group="ClSpecWhen" tag="7"/>
    <tag group="SpecSource" tag="cHelpNin"/>
    <tag group="AbilType" tag="Extra"/>
    <eval phase="PostAttr" priority="10000"><![CDATA[
      ~ Get our encumbrance level - if we're encumbered by that, or if we're wearing
      ~ armor or shield, we're disabled.
