    <tag group="ClSpecWhen" tag="2"/>
    <tag group="AbilType" tag="Extra"/>
    <tag group="SpecType" tag="Resist"/>
    <eval phase="UserFinal"><![CDATA[
      var result as number
      ~ If we fail the test for being speedy, get out
      if (hero.tagis[Encumbered.Heavy] + hero.tagis[Encumbered.Medium] > 0) then
        result = assign[Helper.SpcDisable]
        done
      elseif (hero.tagis[Hero.HeavyArmor] + hero.tagis[Hero.MedArmor] <> 0) then
        result = assign[Helper.SpcDisable]
        done
        endif

      ~ We passed, so set our bonus
      var level as number
      level = hero.child[cHelpSct].field[cTotalLev].value

      var bonus as number
      if (level = 20) then
        bonus = 3
      elseif (level >= 11) then
        bonus = 2
      elseif (level >= 2) then
        bonus = 1
    endif

      ~ Add a Competence Bonus to our initiative and Fortitude saves
     hero.child[Initiative].field[BonComp].value = maximum(hero.child[Initiative].field[BonComp].value, bonus)

     hero.child[vFort].field[BonComp].value = maximum(hero.child[vFort].field[BonComp].value, bonus)

      ~ Set our name
     field[livename].text = "Battle Fortitude +" & bonus & ""
     field[xSumm].text = "+" & bonus & " bonus to Init and Fort saves when in Light armor and unencumbered"]]>
