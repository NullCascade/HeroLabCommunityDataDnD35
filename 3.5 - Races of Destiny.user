  <thing id="xPSUurkrau" name="Power Sigil Uurkrau" description="Dexterity modifier used for Bonus Spells" compset="Special" uniqueness="unique">
    <usesource source="RoDestiny" parent="p35" name="Races of Destiny"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="SpecSource" tag="rRoDIllmn"/>
    <tag group="User" tag="Uurkrau"/>
    <eval phase="UserPostLv" priority="501"><![CDATA[if (hero.tagis[User.Uur] <> 0) then
  if (hero.tagis[User.Krau] <> 0) then
    perform assign[Helper.ShowSpec]

    ~ We check all caster classes for their bonus modifier and exchange with dexterity mod if higher
    var dexvalue as number
    var dexmod as number

    dexvalue = hero.child[aDEX].field[aValue].value
    dexmod = hero.child[aDEX].field[aBonus].value

    foreach pick in hero from BaseClHelp where "CasterSrc.Arcane|CasterSrc.Divine"
      if (each.field[cSplAttVal].value <= dexvalue) then
        each.field[cSplAttVal].value = dexvalue
      endif
      if (each.field[cSplAttBon].value <= dexmod) then
        each.field[cSplAttBon].value = dexmod
      endif
    nexteach


  else
    perform delete[Helper.ShowSpec]
    perform assign[Helper.SpcDisable]
    done
  endif
endif]]></eval>
    </thing>
