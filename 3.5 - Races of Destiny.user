  <thing id="xPSAeshkra" name="Power Sigil Aeshkrau" description="Strength modifier used for Bonus Spells" compset="Special" uniqueness="unique">
    <usesource source="RoDestiny" parent="p35" name="Races of Destiny"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="SpecSource" tag="rRoDIllmn"/>
    <tag group="User" tag="Aeshkra"/>
    <eval phase="PostAttr" priority="501"><![CDATA[if (hero.tagis[User.Aesh] <> 0) then
  if (hero.tagis[User.Krau] <> 0) then
    perform assign[Helper.ShowSpec]

    ~ We check all caster classes for their bonus modifier and exchange with strength mod if higher
    var strvalue as number
    var strmod as number

    strvalue = hero.child[aSTR].field[aValue].value
    strmod = hero.child[aSTR].field[aBonus].value

    foreach pick in hero from BaseClHelp where "CasterSrc.Arcane|CasterSrc.Divine"
      if (each.field[cSplAttVal].value <= strvalue) then
        each.field[cSplAttVal].value = strvalue
      endif
      if (each.field[cSplAttBon].value <= strmod) then
        each.field[cSplAttBon].value = strmod
      endif
    nexteach
  else
    perform delete[Helper.ShowSpec]
    perform assign[Helper.SpcDisable]
    done
  endif
endif]]></eval>
    </thing>
  <thing id="xPSAeshoon" name="Power Sigil Aeshoon" description="Twice per day, the illumian can spend a turn/rebuke undead attempt as a swift action to gain a bonus to weapon damage rolls equal to her Wisdom Bonus. This bonus lasts one turn and is valid only to weapons for which she has selected the Weapon Focus Feat." compset="Special" uniqueness="unique">
