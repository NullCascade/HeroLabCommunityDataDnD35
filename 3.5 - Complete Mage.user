  <thing id="cMSpMinor" name="Minor School Esoterica" description="At 4th level, your unflagging focus on your chosen school opens your mind to new possibilities and grants you the first taste of the unique skills of a master specialist." compset="ClSpecial">
    <tag group="ClSpecWhen" tag="4"/>
    <tag group="SpecSource" tag="cHelpMSp"/>
    <eval phase="Final" priority="10000"><![CDATA[var lvl as number
lvl=field[xTotalLev].value


if (hero.tagcount[WizSpec.Abjur]<>0) then
  lvl=round(lvl/2,0,-1)
  field[CustDesc].text = "You gain a competence bonus on dispel checks equal to 1/2 your master specialist level."
  field[xSumm].text = "Add "&lvl& " to dispel checks."
elseif (hero.tagcount[WizSpec.Conjur]<>0) then
  field[CustDesc].text = "Any creature you summon or call appears with extra hit points equal to your caster level."
  field[xSumm].text ="Add "&lvl& " hp to summoned creatures."
elseif (hero.tagcount[WizSpec.Divination]<>0) then
  lvl=round(lvl/2,0,-1)
  field[CustDesc].text = "Divination spells you cast that have a duration of concentration remain in effect for a number of extra rounds equal to 1/2 your master specialist level after you cease concentrating. You can cast other spells and otherwise act normally during this duration."
  field[xSumm].text ="Div spells remain for "&lvl& " rds post concentration."
elseif (hero.tagcount[WizSpec.Enchant]<>0) then
  field[CustDesc].text = "Targets of your charm spells do not gain a bonus on their saves due to being currently threatened or attacked by you or your allies. In addition, subjects of your compulsion spells do not get a bonus on saves due to being forced to take an action against their natures."
  field[xSumm].text ="No bonus vs. charm due to threator act against nature."
elseif (hero.tagcount[WizSpec.Evocation]<>0) then
  field[CustDesc].text = "When casting an evocation spell, you gain a bonus on Concentration checks equal to 1/2 your master specialist level."
  lvl=round(lvl/2,0,-1)
  field[xSumm].text ="Add +"&lvl&" as bonus to Concen with evocations."
elseif (hero.tagcount[WizSpec.Illusion]<>0) then
  field[CustDesc].text = "The save DCs of your illusion spells that have a saving throw entry of 'Will disbelief' increase by 2."
  field[xSumm].text ="+2 DC for 'Will disbelief' illusions."
elseif (hero.tagcount[WizSpec.Necromancy]<>0) then
  field[CustDesc].text = "When you cast a necromancy spell, undead allies within 60 feet gain turn resistance and a bonus on saves equal to your master specialist level for a number of rounds equal to your master specialist level."
