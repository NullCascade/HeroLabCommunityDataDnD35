    <tag group="SpecType" tag="SpellLike"/>
    </thing>
  <thing id="cWrlCauMir" name="Caustic Mire (Greater; 4th)" description="You can use {i}caustic mire{/i} as the spell (see page 98). If you use this invocation a second time while a previous {i}caustic mire{/i} is still present, the previous effect ends." compset="CustomSpec" uniqueness="useronce">
