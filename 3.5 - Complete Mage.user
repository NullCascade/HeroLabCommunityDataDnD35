bonus = round(#levelcount[EldDiscip]/2,0,-1)
bonus = maximum(bonus,1)

var rounds as number
rounds = maximum(3 + hero.child[aCHA].field[aModBonus].value,1)

field[livename].text = field[name].text & " (+" & bonus & ") (" & rounds & " rounds)"]]></eval>
    </thing>
  <thing id="cEDWilFre" name="Wild Frenzy" description="You gain a +2 bonus on attack rolls and damage rolls with melee weapons and eldritch blasts, along with temporary hit points equal to twice your class level. This effect lasts for a number of rounds equal to 3 + your Cha modifier (minimum 1 round). Your deity must be chaotic for you to select this gift." compset="CustomSpec" uniqueness="useronce">
