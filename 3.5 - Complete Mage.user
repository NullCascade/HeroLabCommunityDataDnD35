    <tag group="SpecType" tag="Attack"/>
    <exprreq message="Ability to use Lesser Invocations required."><![CDATA[hero.childfound[xInvoke].field[Value].value >= 6]]></exprreq>
    </thing>
  <thing id="cWrlCalBea" name="Call of the Beast (Least; 2nd)" description="You gain a rapport with the beasts of the world. You gain the wild empathy ability as a druid of your warlock level and can communicate with animals as if under the effect of {i}speak with animals{/i}. This invocation lasts for 24 hours." compset="CustomSpec" uniqueness="useronce">
