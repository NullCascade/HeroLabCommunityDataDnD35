  <thing id="cMasterSpc" name="Master Specialist" description="\n\n{b}Source{/b}: Complete Mage" compset="ClassLevel" maxlimit="10">
    <comment>Does not check for 2nd level Arcane ability!</comment>
    <tag group="ClassType" tag="Prestige"/>
    <bootstrap thing="cHelpMSp"></bootstrap>
    <link linkage="helper" thing="cHelpMSp"/>
    <exprreq message="5 ranks Spellcraft required!"><![CDATA[#skillranks[kSpellcr]>=5]]></exprreq>
    <exprreq message="5 ranks Knowledge (Arcana) required!"><![CDATA[#skillranks[kKnowArcan]>=5]]></exprreq>
    <exprreq message="Must be a specialist Wizard!"><![CDATA[hero.tagis[WizSpec.Abjur]+hero.tagis[WizSpec.Conjur]+hero.tagis[WizSpec.Divination]+hero.tagis[WizSpec.Enchant]+hero.tagis[WizSpec.Evocation]+hero.tagis[WizSpec.Illusion]+hero.tagis[WizSpec.Necromancy]+hero.tagis[WizSpec.Transmutat]<>0]]></exprreq>
    <exprreq message="Must be able to cast Arcane Spells of 2nd level!"><![CDATA[tagcount[Hero.Arcane] >= 2 + 1]]></exprreq>
    <prereq message="Must have spell focus in your specialized school!">
      <validate><![CDATA[@valid=0
var spfoc as string
foreach pick in Hero from BaseFeat where "fInclude.fSpellFoc"
spfoc=eachpick.field[fChosen].chosen.field[name].text
if (hero.tagcount[WizSpec.Abjur]<>0) then
  if (compare(spfoc,"Abjuration")=0) then
      @valid=1
   endif
endif
if (hero.tagcount[WizSpec.Conjur]<>0) then
  if (compare(spfoc,"Conjuration")=0) then
      @valid=1
   endif
endif

if (hero.tagcount[WizSpec.Divination]<>0) then
  if (compare(spfoc,"Divination")=0) then
      @valid=1
   endif
endif

if (hero.tagcount[WizSpec.Enchant]<>0) then
  if (compare(spfoc,"Enchantment")=0) then
      @valid=1
   endif
endif

if (hero.tagcount[WizSpec.Evocation]<>0) then
  if (compare(spfoc,"Evocation")=0) then
      @valid=1
   endif
endif

if (hero.tagcount[WizSpec.Illusion]<>0) then
  if (compare(spfoc,"Illusion")=0) then
      @valid=1
   endif
endif

if (hero.tagcount[WizSpec.Necromancy]<>0) then
  if (compare(spfoc,"Necromancy")=0) then
      @valid=1
   endif
endif

if (hero.tagcount[WizSpec.Transmutat]<>0) then
  if (compare(spfoc,"Transmutation")=0) then
      @valid=1
   endif
endif
nexteach]]></validate>
      </prereq>
    </thing>
  <thing id="cExpanded1" name="Expanded Spellbook" description="When you reach 2nd level, you can add one spell of your chosen school to your spellbook. The spell can be of any level that you can cast, and it is in addition to the normal spells gained when increasing your level.\n\nYou can add another spell of your chosen school to your spellbook at 5th and at 8th level." compset="ClSpecial">
