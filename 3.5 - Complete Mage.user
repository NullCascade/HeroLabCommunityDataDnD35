  <thing id="cUlMSpKnHe" name="Expanded Spell Knowledge Helper" description="Choose the spontaneous casting class that will gain additional spells known." compset="ClSpecial">
    <fieldval field="usrCandid1" value="component.BaseClHelp &amp; CasterSrc.Arcane &amp; (CasterType.SpontKnow | CasterType.SpontAll)"/>
    <tag group="AbilType" tag="Extra"/>
    <tag group="ChooseSrc1" tag="Hero"/>
    <tag group="SpecSource" tag="cHelpUlM"/>
    <tag group="ClSpecWhen" tag="2"/>
    <eval phase="Final" priority="10000"><![CDATA[   ~ If we're not active, get out now
   doneif (tagis[Helper.ShowSpec] = 0)

   ~ If we haven't chosen anything, get out now
   doneif (field[usrChosen1].ischosen + tagis[Target.?] = 0)

   ~ Get the spell levels of each spell selected by the other Expanded Spell Knowledge specials.
   var bonus1 as number
   bonus1 = hero.child[cUlMExSpK1].field[usrChosen1].chosen.tagvalue[sLevel.?]

   var bonus2 as number
   bonus2 = hero.child[cUlMExSpK2].field[usrChosen1].chosen.tagvalue[sLevel.?]

   var bonus3 as number
   bonus3 = hero.child[cUlMExSpK3].field[usrChosen1].chosen.tagvalue[sLevel.?]

   var bonus4 as number
   bonus4 = hero.child[cUlMExSpK4].field[usrChosen1].chosen.tagvalue[sLevel.?]

   var bonus5 as number
   bonus5 = hero.child[cUlMExSpK5].field[usrChosen1].chosen.tagvalue[sLevel.?]

   ~ Add to spells known if we are high enough level.
   if (field[xTotalLev].value >= 10) then
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus5] += 1
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus4] += 1
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus3] += 1
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus2] += 1
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus1] += 1
   elseif (field[xTotalLev].value >= 8) then
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus4] += 1
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus3] += 1
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus2] += 1
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus1] += 1
   elseif (field[xTotalLev].value >= 6) then
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus3] += 1
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus2] += 1
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus1] += 1
   elseif (field[xTotalLev].value >= 4) then
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus2] += 1
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus1] += 1
   elseif (field[xTotalLev].value >= 2) then
     field[usrChosen1].chosen.field[cKnowMax].arrayvalue[bonus1] += 1
   endif]]></eval>
    </thing>
