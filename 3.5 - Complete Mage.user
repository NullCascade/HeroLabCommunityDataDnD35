    <tag group="SpecSource" tag="cHelpWrl"/>
    <tag group="AbilType" tag="SpellLike"/>
    <tag group="SpecType" tag="Sense"/>
    </thing>
  <thing id="cWrlBinBla" name="Binding Blast (Dark; 7th; Eldritch Essence)" description="You transform your eldritch blast into a {i}binding blast{/i}. Any creature struck by a {i}binding blast{/i} must succeed on a Will save or be stunned for 1 round. This is a mind-affecting effect." compset="CustomSpec" uniqueness="useronce">
