      <validate><![CDATA[validif (tagcount[Hero.Arcane] >= 3 + 1)
validif (tagcount[Hero.Divine] >= 3 + 1)]]></validate>
      </prereq>
    </thing>
  <thing id="fFearNecro" name="Fearsome Necromancy" description="Creatures subjected to your necromantic spells feel the chill of fear.\n\n{b}Prerequisite{/b}: Spell Focus (necromancy) or necromancer level 1st.\n\n{b}Benefit{/b}: Any foe required to save against a necromancy spell you cast is shaken for 1 round, regardless of the result of the save. This mind-affecting fear ability does not stack with any other fear effect (it can&apos;t make a foe worse than shaken).\n\n{b}Special{/b}: A necromancer can select this feat as a wizard bonus feat.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Foe targeted by necro spell is shaken 1 rd (no save), doesn&apos;t stack." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="General"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="BonusFor" tag="Wizard"/>
    <prereq message="Spell Focus (necromancy) or necromancer level 1st required.">
      <validate><![CDATA[validif (child[ssNecro].tagis[Broadcast.SpellFocus] <> 0)
validif (hero.tagis[WizSpec.wsNecro] <> 0)]]></validate>
      </prereq>
    </thing>
  <thing id="fFeyHerita" name="Fey Heritage" description="You are descended from creatures native to the fey realms. You are naturally resistant to the most common effects produced by your ancestors.\n\n{b}Prerequisite{/b}: Nonlawful alignment.\n\n{b}Benefit{/b}: You gain a +3 bonus on Will saving throws against enchantment effects.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="+3 bonus to Will saves vs enchantment effects." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Heritage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <exprreq message="Nonlawful alignment required.">hero.tagis[Alignment.Lawful] = 0</exprreq>
    </thing>
  <thing id="fFeyLegacy" name="Fey Legacy" description="The magical powers of your ancestors manifest in you.\n\n{b}Prerequisites{/b}: Nonlawful alignment, Fey Heritage, character level 9th.\n\n{b}Benefit{/b}: You gain the following spell-like abilities, each usable once per day: {i}confusion{/i}, {i}dimension door{/i}, and {i}summon nature&apos;s ally V{/i}. Your caster level equals your character level.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="1/day each, use {i}confusion{/i}, {i}dimen door{/i} &amp; {i}sum nat ally V{/i} (CLXX)." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Heritage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <bootstrap thing="xFeyLegCon"></bootstrap>
    <bootstrap thing="xFeyLegDiD"></bootstrap>
    <bootstrap thing="xFeyLegSNA"></bootstrap>
    <eval phase="UserPostLv" priority="10000"><![CDATA[var level as number
level = herofield[tLevel].value
field[xSumm].text = "1/day each, use {i}confusion{/i}, {i}dimension door{/i} & {i}summon nature's ally V{/i} (CL " & level & ")."]]></eval>
    <exprreq message="Nonlawful alignment required.">hero.tagis[Alignment.Lawful] = 0</exprreq>
    <exprreq message="Fey Heritage required."><![CDATA[#hasfeat[fFeyHerita] <> 0]]></exprreq>
    <exprreq message="Character level 9th required."><![CDATA[herofield[tLevel].value >= 9]]></exprreq>
    </thing>
  <thing id="fFeyPower" name="Fey Power" description="Your fey heritage augments the power of certain types of magic.\n\n{b}Prerequisites{/b}: Nonlawful alignment, Fey Heritage.\n\n{b}Benefit{/b}: Your caster level and save DCs for enchantment spells and warlock invocations increase by 1.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="+1 to CL and DC for enchantment spells/invocations." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Heritage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <exprreq message="Fey Heritage required."><![CDATA[#hasfeat[fFeyHerita] <> 0]]></exprreq>
    <exprreq message="Nonlawful alignment required.">hero.tagis[Alignment.Lawful] = 0</exprreq>
    </thing>
  <thing id="fFeyPresen" name="Fey Presence" description="You share your ancestors&apos; knack for playing tricks on the minds of others.\n\n{b}Prerequisites{/b}: Nonlawful alignment, Fey Heritage, character level 6th.\n\n{b}Benefit{/b}: You gain the following spell-like abilities, each usable once per day: {i}charm monster{/i}, {i}deep slumber{/i}, and {i}disguise self{/i}. Your caster level equals your character level.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="1/day each, use {i}charm monster{/i}, {i}deep slumber{/i} &amp; {i}disguise self{/i} (CLXX)." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Heritage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <bootstrap thing="xFeyPreCMo"></bootstrap>
    <bootstrap thing="xFeyPreDSe"></bootstrap>
    <bootstrap thing="xFeyPreDSl"></bootstrap>
    <eval phase="UserPostLv" priority="10000"><![CDATA[var level as number
level = herofield[tLevel].value
field[xSumm].text = "1/day each, use {i}charm monster{/i}, {i}deep slumber{/i} & {i}disguise self{/i} (CL " & level & ")."]]></eval>
    <exprreq message="Nonlawful alignment required.">hero.tagis[Alignment.Lawful] = 0</exprreq>
    <exprreq message="Fey Heritage required."><![CDATA[#hasfeat[fFeyHerita] <> 0]]></exprreq>
    <exprreq message="Character level 6th required."><![CDATA[herofield[tLevel].value >= 6]]></exprreq>
    </thing>
  <thing id="fFeySkin" name="Fey Skin" description="Your fey heritage guards you against all weapons except those crafted from the dreaded cold iron.\n\n{b}Prerequisites{/b}: Nonlawful alignment, Fey Heritage.\n\n{b}Benefit{/b}: You gain damage reduction (overcome by cold iron) equal to 1 + the number of feats you have that list Fey Heritage as a prerequisite (including such feats that you take after gaining this one). For example, if you have Fey Skin and Fey Presence, you would have damage reduction 3/cold iron.\n\nThis value stacks with any similar damage reduction you might have from your type, subtype, race, or class, but not from other sources, such as spells or magic items.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Gain DR X/cold iron which stacks, except with spell/magic items." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Heritage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <bootstrap thing="xDamRdIron"></bootstrap>
    <eval phase="UserPostLv" priority="11000"><![CDATA[   var result as number
   result = 2

 if (#hasfeat[fFeyLegacy] <> 0) then
   result += 1
 endif

 if (#hasfeat[fFeyPower] <> 0) then
   result += 1
 endif

 if (#hasfeat[fFeyPresen] <> 0) then
   result += 1
 endif

      hero.child[xDamRdIron].field[Value].value += result

field[xSumm].text = "Gain DR " & result & "/cold iron which stacks, except with spell/magic items."]]></eval>
    <exprreq message="Nonlawful alignment required.">hero.tagis[Alignment.Lawful] = 0</exprreq>
    <exprreq message="Fey Heritage required."><![CDATA[#hasfeat[fFeyHerita] <> 0]]></exprreq>
    </thing>
  <thing id="fFiendHeri" name="Fiendish Heritage" description="You are descended from creatures native to the Lower Planes. You share some of your ancestors&apos; natural resistance to poison, and you are resistant to the magic of good foes.\n\n{b}Prerequisite{/b}: Non-good alignment.\n\n{b}Benefit{/b}: You gain a +4 bonus on Fortitude saving throws against poison.\n\nYou also gain a +1 bonus on saving throws against spells or other effects produced by good creatures.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="+4 to Fort saves vs poison, +1 to saves vs spells/effects from good foes." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Heritage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <exprreq message="Non-good alignment required.">hero.tagis[Alignment.Good] = 0</exprreq>
    </thing>
  <thing id="fFiendLega" name="Fiendish Legacy" description="The magical powers of your ancestors manifest in you.\n\n{b}Prerequisites{/b}: Non-good alignment, Fiendish Heritage, character level 9th.\n\n{b}Benefit{/b}: You gain the following spell-like abilities, each usable once per day: {i}teleport{/i} (self plus 50 pounds of objects only), {i}summon monster V{/i} (fiendish creatures only), and {i}unholy blight{/i}. Your caster level equals your character level.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="1/day each, use {i}teleport{/i}, {i}unholy blight{/i} &amp; {i}sum mon V{/i} (CLXX)." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Heritage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <bootstrap thing="xFieLegUnB"></bootstrap>
    <bootstrap thing="xFieLegTel"></bootstrap>
    <bootstrap thing="xFieLegSMo"></bootstrap>
    <eval phase="UserPostLv" priority="10000"><![CDATA[var level as number
level = herofield[tLevel].value
field[xSumm].text = "1/day each, use {i}teleport{/i}, {i}unholy blight{/i} & {i}summon monster V{/i} (CL " & level & ")."]]></eval>
    <exprreq message="Non-good alignment required.">hero.tagis[Alignment.Good] = 0</exprreq>
    <exprreq message="Fiendish Heritage required."><![CDATA[#hasfeat[fFiendHeri] <> 0]]></exprreq>
    <exprreq message="Character level 9th required."><![CDATA[herofield[tLevel].value >= 9]]></exprreq>
    </thing>
  <thing id="fFiendPowe" name="Fiendish Power" description="Your fiendish heritage augments the power of certain types of magic.\n\n{b}Prerequisites{/b}: Non-good alignment, Fiendish Heritage.\n\n{b}Benefit{/b}: Your caster level and save DCs for evil spells and warlock invocations increase by 1.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="+1 to CL and DC for evil spells/invocations." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Heritage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <exprreq message="Fiendish Heritage required."><![CDATA[#hasfeat[fFiendHeri] <> 0]]></exprreq>
    <exprreq message="Non-good alignment required.">hero.tagis[Alignment.Good] = 0</exprreq>
    </thing>
  <thing id="fFiendPres" name="Fiendish Presence" description="You share your ancestors&apos; ability to tamper with the minds of weak-minded fools.\n\n{b}Prerequisites{/b}: Non-good alignment, Fiendish Heritage, character level 6th.\n\n{b}Benefit{/b}: You gain the following spell-like abilities, each usable once per day: {i}cause fear{/i}, {i}detect thoughts{/i}, and {i}suggestion{/i}. Your caster level equals your character level.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="1/day each, use {i}cause fear{/i}, {i}detect thoughts{/i} &amp; {i}suggestion{/i} (CLXX)." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Heritage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <bootstrap thing="xFiePreDTh"></bootstrap>
    <bootstrap thing="xFiePreSug"></bootstrap>
    <bootstrap thing="xFiePreCFe"></bootstrap>
    <eval phase="UserPostLv" priority="10000"><![CDATA[var level as number
level = herofield[tLevel].value
field[xSumm].text = "1/day each, use {i}cause fear{/i}, {i}detect thoughts{/i} & {i}suggestion{/i} (CL " & level & ")."]]></eval>
    <exprreq message="Non-good alignment required.">hero.tagis[Alignment.Good] = 0</exprreq>
    <exprreq message="Fiendish Heritage required."><![CDATA[#hasfeat[fFiendHeri] <> 0]]></exprreq>
    <exprreq message="Character level 6th required."><![CDATA[herofield[tLevel].value >= 6]]></exprreq>
    </thing>
  <thing id="fFiendResi" name="Fiendish Resistance" description="Your bloodline inures you against corrosion and fire.\n\n{b}Prerequisites{/b}: Non-good alignment, Fiendish Heritage.\n\n{b}Benefit{/b}: You gain resistance to acid and fire equal to three times the number of feats you have that list Fiendish Heritage as a prerequisite (including such feats that you take after gaining this one). These values stack with any resistance to acid or fire you might have from your type, subtype, race, or class, but not from other sources, such as spells or magic items.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Gain acid &amp; fire resist X which stacks, except with spell/magic items." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Heritage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <bootstrap thing="xDamRsAcid"></bootstrap>
    <bootstrap thing="xDamRsFire"></bootstrap>
    <eval phase="UserPostLv" priority="10000"><![CDATA[   var result as number
   result = 1

 if (#hasfeat[fFiendLega] <> 0) then
   result += 1
 endif

 if (#hasfeat[fFiendPowe] <> 0) then
   result += 1
 endif

 if (#hasfeat[fFiendPres] <> 0) then
   result += 1
 endif

   result = result * 3

   hero.child[xDamRsAcid].field[Value].value += result
   hero.child[xDamRsFire].field[Value].value += result

   field[xSumm].text = "Gain acid & fire resist " & result & " which stacks, except with spell/magic items."]]></eval>
    <exprreq message="Non-good alignment required.">hero.tagis[Alignment.Good] = 0</exprreq>
    <exprreq message="Fiendish Heritage required."><![CDATA[#hasfeat[fFiendHeri] <> 0]]></exprreq>
    </thing>
  <thing id="fFireBurst" name="Fiery Burst" description="You channel your magical talent into a blast of fire.\n\n{b}Prerequisite{/b}: Ability to cast 2nd-level spells.\n\n{b}Benefit{/b}: As long as you have a fire spell of 2nd level or higher available to cast, you can spend a standard action to create a 5-foot-radius burst of fire at a range of 30 feet. This burst deals 1d6 points of fire damage per level of the highest level fire spell you have available to cast. A successful Reflex save halves the damage.\n\nAs a secondary benefit, you gain a +1 competence bonus to your caster level when casting fire spells.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Fire spl 2nd+, stand, 5 ft rad burst in 30 ft does 1d6 per spl lvl (Ref half)." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Reserve"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="BonusFor" tag="Wizard"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="SpecType" tag="Attack"/>
    <bootstrap thing="xResBonFir"></bootstrap>
    <prereq message="Ability to cast 2nd level spells required.">
      <validate><![CDATA[validif (tagcount[Hero.Arcane] >= 2 + 1)
validif (tagcount[Hero.Divine] >= 2 + 1)]]></validate>
      </prereq>
    </thing>
  <thing id="fHastySpir" name="Hasty Spirit" description="Your watchful spirit lends you a burst of speed in times of great need.\n\n{b}Prerequisite{/b}: Watchful spirit class feature (see the wu jen class in Complete Arcane).\n\n{b}Benefit{/b}: If you use an initiative reroll from your watchful spirit class feature, you can take an extra move action on one of your turns during that encounter.\n\nAlso, you gain one extra initiative reroll from your watchful spirit class feature.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="When use watchful spirit reroll, take extra move act during encounter." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="General"/>
    <tag group="Helper" tag="ShowSpec"/>
    <eval phase="First">hero.childfound[cWuJWatSpi].field[hTotal].value += 1</eval>
    <exprreq message="Watchful spirit class feature required."><![CDATA[childfound[cWuJWatSpi].tagis[Helper.ShowSpec] <> 0]]></exprreq>
    </thing>
  <thing id="fHurBreath" name="Hurricane Breath" description="The power of elemental air you hold in your mind allows you to exhale the wind.\n\n{b}Prerequisite{/b}: Ability to cast 2nd-level spells.\n\n{b}Benefit{/b}: As long as you have an air spell of 2nd level or higher available to cast, you can attempt to knock a single creature within 30 feet back with a blast of wind. This requires a standard action and functions much like a bull rush; roll 1d20 + the level of the highest-level air spell you have available to cast opposed by your opponent&apos;s Strength check. If you succeed, you push the creature back 5 feet.\n\nAs a secondary benefit, you gain a +1 competence bonus to your caster level when casting air spells.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Air spl 2nd+, stand, foe in 30 ft is Bull Rushed by wind (bon is spl lvl)." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Reserve"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="BonusFor" tag="Wizard"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="SpecType" tag="Attack"/>
    <bootstrap thing="xResBonAir"></bootstrap>
    <prereq message="Ability to cast 2nd level spells required.">
      <validate><![CDATA[validif (tagcount[Hero.Arcane] >= 2 + 1)
validif (tagcount[Hero.Divine] >= 2 + 1)]]></validate>
      </prereq>
    </thing>
  <thing id="fInsDivina" name="Insightful Divination" description="Casting a divination spell grants you an uncanny insight into danger.\n\n{b}Prerequisite{/b}: Spell Focus (divination) or diviner level 1st.\n\n{b}Benefit{/b}: When you cast a divination spell, you gain an insight bonus equal to the spell&apos;s level + 1 on initiative checks and an equal insight bonus on the first save you make within the next 24 hours. After you roll this saving throw, you lose the benefit of both bonuses until you cast another divination spell.\n\nIf you cast a second divination spell when the first benefit is still active, you choose whether to retain your existing bonus or take the new one granted by the second spell.\n\n{b}Special{/b}: A diviner can select this feat as a wizard bonus feat.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="When cast divination, 1 + spl lvl bon to next init roll &amp; save." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="General"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="BonusFor" tag="Wizard"/>
    <prereq message="Spell Focus (divination) or diviner level 1st required.">
      <validate><![CDATA[validif (child[ssDivin].tagis[Broadcast.SpellFocus] <> 0)
validif (hero.tagis[WizSpec.wsDivin] <> 0)]]></validate>
      </prereq>
    </thing>
  <thing id="fInvisNeed" name="Invisible Needle" description="You can create tiny darts of force.\n\n{b}Prerequisite{/b}: Ability to cast 3rd-level spells.\n\n{b}Benefit{/b}: As long as you have a force spell of 3rd level or higher available to cast, you can use a standard action to hurl a tiny needle-shaped projectile created from pure force. This attack requires a successful ranged attack roll (not a ranged touch attack), and the dart has a range of 5 feet per level of the force spell. The needle deals 1d4 points of damage per level of the highest-level force spell you have available. Because it is composed of force, the needle can strike incorporeal creatures.\n\nAs a secondary benefit, you gain a +1 competence bonus to your caster level when casting force spells.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Force spl 3rd+, stand, rng att does 1d4 x spl lvl dam out to 5 x spl lvl ft." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Reserve"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="BonusFor" tag="Wizard"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="SpecType" tag="Attack"/>
    <bootstrap thing="xResBonFor"></bootstrap>
    <prereq message="Ability to cast 3rd level spells required.">
      <validate><![CDATA[validif (tagcount[Hero.Arcane] >= 3 + 1)
validif (tagcount[Hero.Divine] >= 3 + 1)]]></validate>
      </prereq>
    </thing>
  <thing id="fMagDevAtt" name="Magic Device Attunement" description="You have a knack for activating familiar magic items.\n\n{b}Prerequisite{/b}: Use Magic Device 1 rank.\n\n{b}Benefit{/b}: If you successfully activate an item with the Use Magic Device skill, you can take a free action to attune yourself to the item. For the next 24 hours, you can activate that item without making further Use Magic Device checks. You can attune yourself to only one item at a time. If you attune yourself to a second item, the previous attunement ends.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Free, when do UMD ck, attune item for 24 hrs so no more rolls needed." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="General"/>
    <tag group="Helper" tag="ShowSpec"/>
    <exprreq message="Use Magic Device 1 rank required."><![CDATA[#skillranks[kUseMagic] >= 1]]></exprreq>
    </thing>
  <thing id="fMagDisrup" name="Magic Disruption" description="You can use your powers of abjuration to interfere with other casters&apos; spells.\n\n{b}Prerequisite{/b}: Ability to cast 3rd-level spells.\n\n{b}Benefit{/b}: As long as you have an abjuration spell of 3rd level or higher available to cast, you can attempt to interrupt another character&apos;s spellcasting with a tiny burst of magic. As an immediate action, you can force any character within 30 feet currently casting a spell to make a Concentration check (DC 15 + the level of the highest-level abjuration spell you have available to cast); if the check fails, the spell&apos;s save DC and caster level are reduced by 2 (to a minimum caster level of 1st).\n\nAs a secondary benefit, you gain a +1 competence bonus to your caster level when casting abjuration spells.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Abj spl 3rd+, imm, force Conc ck in 30 ft (DC15 + spl lvl) or -2 DC and CL." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="fCategory" tag="Reserve"/>
    <tag group="BonusFor" tag="Wizard"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="SpecType" tag="Attack"/>
    <bootstrap thing="xResBonAbj"></bootstrap>
    <prereq message="Ability to cast 3rd level spells required.">
      <validate><![CDATA[validif (tagcount[Hero.Arcane] >= 3 + 1)
validif (tagcount[Hero.Divine] >= 3 + 1)]]></validate>
      </prereq>
    </thing>
  <thing id="fMagSense" name="Magic Sensitive" description="You literally see the emanations of magic around you.\n\n{b}Prerequisite{/b}: Ability to cast 3rd-level spells.\n\n{b}Benefit{/b}: As long as you have a divination spell of 3rd level or higher available to cast, you can sense magical auras (as if you had cast {i}detect magic{/i}). The range of your detection is equal to 5 feet per level of the highest-level divination spell you have available to cast. Activating or concentrating on this ability requires a standard action.\n\nAs a secondary benefit, you gain a +1 competence bonus to your caster level when casting divination spells.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Div spl 3rd+, stand, use detect magic out to 5 x spl lvl ft." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="fCategory" tag="Reserve"/>
    <tag group="BonusFor" tag="Wizard"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="SpecType" tag="Sense"/>
    <bootstrap thing="xResBonDiv"></bootstrap>
    <prereq message="Ability to cast 3rd level spells required.">
      <validate><![CDATA[validif (tagcount[Hero.Arcane] >= 3 + 1)
validif (tagcount[Hero.Divine] >= 3 + 1)]]></validate>
      </prereq>
    </thing>
  <thing id="fMasUndead" name="Master of Undeath" description="You can control an undead that you create . . . for a time.\n\n{b}Prerequisite{/b}: Knowledge (religion) 5 ranks.\n\n{b}Benefit{/b}: When you create an undead creature, you can decide that it doesn&apos;t count against your normal limit of controlled undead creatures. In this case, you still control the creature, but only for a number of days equal to your caster level. When this duration ends, the undead immediately becomes hostile to you (though you can establish control over it by other means). You can have only one creature of this kind at a time.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="When create und, may not count in HD total, lose control CL days later." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="General"/>
    <tag group="Helper" tag="ShowSpec"/>
    <exprreq message="Knowledge (religion) 5 ranks required."><![CDATA[#skillranks[kKnowRel] >= 5]]></exprreq>
    </thing>
  <thing id="fMelodCast" name="Melodic Casting" description="You can weave your music and magic together into a single perfect voice.\n\n{b}Prerequisites{/b}: Perform 4 ranks, Spellcraft 4 ranks, bardic music class feature.\n\n{b}Benefit{/b}: Whenever a Concentration check would be required to cast a spell or use a spell-like ability (such as when you cast defensively or are distracted or injured while casting), you can make a Perform check instead.\n\nIn addition, you can cast spells and activate magic items by command word or spell completion while using a bardic music ability. Bardic music abilities that require concentration still take a standard action to perform.\n\n{b}Normal{/b}: A bard can&apos;t cast spells or activate magic items by command word or spell completion while using bardic music.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="May use spells during bardic music and make Perf in place of Conc ck." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="General"/>
    <tag group="Helper" tag="ShowSpec"/>
    <exprreq message="Spellcraft 4 ranks required."><![CDATA[#skillranks[kSpellcr] >= 4]]></exprreq>
    <exprreq message="Bardic Music required."><![CDATA[picklives[hBrdMusic] <> 0]]></exprreq>
    <prereq message="Perform 4 ranks required.">
      <validate><![CDATA[~ Loop through all perform skills
var result as number
foreach pick in hero where "Helper.SkCatPerf"

~ If this skill has 4 or more ranks, we are valid
  if (each.field[kUserRanks].value >= 4) then
    result += 1
  endif
nexteach

if (result >= 1) then
  @valid = 1
  endif]]></validate>
      </prereq>
    </thing>
  <thing id="fMMScFocus" name="Metamagic School Focus" description="You are unusually skilled at modifying the effects of a particular school of magic.\n\n{b}Prerequisite{/b}: Spell Focus (chosen school) or specialist wizard in chosen school.\n\n{b}Benefit{/b}: Choose a school of magic for which you have the Spell Focus feat, or the school in which you have specialized. Three times per day, you can reduce by one level the cost of a metamagic feat applied to a spell of the chosen school. If you prepare spells, you can have only up to three such reduced cost spells prepared at any time.\n\n{b}Special{/b}: A wizard can select this feat as a wizard bonus feat. This feat can be taken more than once. Each time you take it, it applies to a different school of magic.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="3/day reduce metamagic cost by 1 level for chosen school.">
    <fieldval field="hTotal" value="3"/>
    <usesource source="CompMage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="fShowWhat" tag="Schools"/>
    <tag group="Helper" tag="ShowCharge"/>
    <tag group="fCategory" tag="General"/>
    <tag group="BonusFor" tag="Wizard"/>
    <prereq message="Spell Focus (chosen school) or specialist wizard in chosen school required.">
      <validate><![CDATA[validif (hero.tagis[WizSpec.wsAbjur] + hero.tagis[WizSpec.wsConjur] + hero.tagis[WizSpec.wsDivin] + hero.tagis[WizSpec.wsEnchant] + hero.tagis[WizSpec.wsEvoc] + hero.tagis[WizSpec.wsIllusion] + hero.tagis[WizSpec.wsNecro] + hero.tagis[WizSpec.wsTrans] <> 0)

validif (#hasfeat[fSpellFoc] <> 0)]]></validate>
      </prereq>
    </thing>
  <thing id="fMMSpTrigg" name="Metamagic Spell Trigger" description="You can apply metamagic feats you know to spell effects from magic items you activate with a spell trigger.\n\n{b}Prerequisites{/b}: Any metamagic feat, Use Magic Device 15 ranks or Spellcraft 15 ranks.\n\n{b}Benefit{/b}: You can apply any one metamagic feat you know to a spell generated by a spell trigger item (such as a wand or staff) that you activate. You expend one extra charge for each change in spell level a metamagic feat normally requires.\n\nIf the metamagic feat&apos;s level adjustment would normally increase the slot of the chosen spell&apos;s level above 9th, you can&apos;t apply the metamagic effect to the spell. For example, you can&apos;t apply Quicken Spell to an {i}antimagic field{/i} generated by a staff (since that would take a 10th-level spell slot to cast).\n\nIf sufficient charges aren&apos;t available in the item to power the application of metamagic feats (or if the item doesn&apos;t use charges), the item fails to activate and no charges are used, but the action used to activate the item is wasted.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Apply known MM feat to spl trigger item (uses extra charge = lvl mod)." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="fCategory" tag="General"/>
    <exprreq message="Any metamagic feat required."><![CDATA[tagcount[fCategory.Metamagic] >= 1]]></exprreq>
    <prereq message="Use Magic Device 15 ranks or Spellcraft 15 ranks required.">
      <validate><![CDATA[validif (#skillranks[kUseMagic] >= 15)
validif (#skillranks[kSpellcr] >= 15)]]></validate>
      </prereq>
    </thing>
  <thing id="fMMVigor" name="Metamagic Vigor" description="The energy you pour into increasing the power of your spells feeds back upon itself in an ever-increasing cycle.\n\n{b}Prerequisites{/b}: Two or more metamagic feats.\n\n{b}Benefit{/b}: The Metamagic Vigor feat allows the use of two tactical maneuvers.\n\n{i}Metamagic Intensity{/i}: If you cast spells affected by the same metamagic feat in 2 consecutive rounds, you gain a +1 bonus to the second spell&apos;s caster level.\n\n{i}Metamagic Versatility{/i}: If you cast spells affected by two different metamagic feats in 2 consecutive rounds, you gain a +1 bonus to the second spell&apos;s save DC.\n\n{b}Special{/b}: You can&apos;t benefit from both of these maneuvers (or either maneuver more than once) in a single round; if you are eligible to use both, choose the one you want.\n\nOnly actual metamagic feats allow this feat to function. A metamagic spell effect produced by a {i}metamagic rod{/i} or other magic item or external device does not qualify you to use this feat.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Gain a variety of options when use MM spells in succession." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="fCategory" tag="Tactical"/>
    <exprreq message="Two or more metamagic feats required."><![CDATA[tagcount[fCategory.Metamagic] >= 2]]></exprreq>
    </thing>
  <thing id="fMinorShap" name="Minor Shapeshift" description="Your mastery of shapeshifting magic allows you to reshape your flesh in small but significant ways.\n\n{b}Prerequisite{/b}: Ability to cast 4th-level spells.\n\n{b}Benefit{/b}: As long as you have a polymorph spell of 4th level or higher available to cast, you can spend a swift action to grant yourself one of the following benefits:\n\n{i}Might{/i}: +2 bonus on melee damage rolls.\n{i}Mobility{/i}: +2 competence bonus on Balance, Climb, Jump, and Swim checks.\n{i}Savagery{/i}: Primary claw attack dealing 1d6 points of damage (assuming Medium size).\n{i}Speed{/i}: +5-foot enhancement bonus to any one movement mode you already possess.\n{i}Vigor{/i}: Temporary hit points equal to your HD.\n\nThe chosen benefit lasts for a number of rounds equal to the level of the highest-level polymorph spell you have available to cast. If you activate this feat a second time while a previous benefit is still in effect, the first benefit ends immediately.\n\nAs a secondary benefit, you gain a +1 competence bonus to your caster level when casting polymorph spells. See page 91 for details on the new polymorph subschool of spells.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Polymorph spl 4th+, swift, choose a benefit that lasts for spl lvl rounds." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Reserve"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="BonusFor" tag="Wizard"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="SpecType" tag="SpellLike"/>
    <bootstrap thing="xResBonPol"></bootstrap>
    <prereq message="Ability to cast 4th level spells required.">
      <validate><![CDATA[validif (tagcount[Hero.Arcane] >= 4 + 1)
validif (tagcount[Hero.Divine] >= 4 + 1)]]></validate>
      </prereq>
    </thing>
  <thing id="fMysBackla" name="Mystic Backlash" description="With a touch, your magic corrupts the spells of your enemy.\n\n{b}Prerequisite{/b}: Ability to cast 5th-level spells.\n\n{b}Benefit{/b}: As long as you have an abjuration spell of 5th level or higher available to cast, you can make another creature&apos;s spellcasting harmful to itself. Use of this feat requires a melee touch attack that does not provoke attacks of opportunity.\n\nAs a standard action, with a successful touch you can infuse another creature with baneful magic for a number of rounds equal to the level of the highest-level abjuration spell you have available. A successful Will save reduces this duration to 1 round.\n\nFor the duration of the effect, each time the target completes the casting of a spell, it takes damage equal to the level of the abjuration spell that determined the effect&apos;s duration. Since the spell&apos;s casting has already been completed, this doesn&apos;t count as damage dealt during casting.\n\nAs a secondary benefit, you gain a +1 competence bonus to your caster level when casting abjuration spells.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Abj 5th+, stand, touch, spl lvl dam to foe if cast for spl lvl rds (Will part)." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Reserve"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="BonusFor" tag="Wizard"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="SpecType" tag="Attack"/>
    <bootstrap thing="xResBonAbj"></bootstrap>
    <prereq message="Ability to cast 5th level spells required.">
      <validate><![CDATA[validif (tagcount[Hero.Arcane] >= 5 + 1)
validif (tagcount[Hero.Divine] >= 5 + 1)]]></validate>
      </prereq>
    </thing>
  <thing id="fPierEvoke" name="Piercing Evocation" description="Your evocation spells ignore an amount of energy resistance.\n\n{b}Prerequisite{/b}: Spell Focus (evocation) or evoker level 1st.\n\n{b}Benefit{/b}: When you cast an evocation spell that deals energy damage (acid, cold, fire, electricity, or sonic), you can choose for 10 points of energy damage dealt by the spell to become untyped damage to which energy resistance and immunity do not apply. If the spell deals multiple types of energy damage, you choose how much of each type is converted by this feat after rolling damage.\n\n{b}Special{/b}: An evoker can select this feat as a wizard bonus feat.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="When cast evocation, may convert 10 dam from energy to untyped." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="General"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="BonusFor" tag="Wizard"/>
    <prereq message="Spell Focus (evocation) or evoker level 1st required.">
      <validate><![CDATA[validif (child[ssEvoc].tagis[Broadcast.SpellFocus] <> 0)
validif (hero.tagis[WizSpec.wsEvoc] <> 0)]]></validate>
      </prereq>
    </thing>
  <thing id="fRangeReca" name="Ranged Recall" description="Your magical ranged attacks rarely miss.\n\n{b}Prerequisites{/b}: Spellcraft 4 ranks, Point Blank Shot, Weapon Focus (ranged spell).\n\n{b}Benefit{/b}: When you miss with a spell or spell-like ability ranged attack against a target within 30 feet, you can spend a swift action to reroll the attack with a &#150;5 penalty. You can use this ability three times per day.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="3/day, when spell&apos;s ranged att roll misses foe in 30 ft, reroll at -5 pen." uniqueness="useronce">
    <fieldval field="hTotal" value="3"/>
    <usesource source="CompMage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="Helper" tag="ShowCharge"/>
    <tag group="fCategory" tag="General"/>
    <exprreq message="Spellcraft 4 ranks required."><![CDATA[#skillranks[kSpellcr] >= 4]]></exprreq>
    <exprreq message="Point Blank Shot required."><![CDATA[#hasfeat[fPointBlnk] <> 0]]></exprreq>
    <exprreq message="Weapon Focus (ranged spell) required."><![CDATA[hero.tagis[WepFocus.wRangeSpl] <> 0]]></exprreq>
    </thing>
  <thing id="fRapidMM" name="Rapid Metamagic" description="You possess an uncanny mastery of your magic, enabling you to modify spells on the fly much faster than others can.\n\n{b}Prerequisites{/b}: Spellcraft 12 ranks, ability to spontaneously cast spells.\n\n{b}Benefit{/b}: When you apply a metamagic feat to a spontaneously cast spell, the spell takes only its normal casting time.\n\n{b}Normal{/b}: Spontaneous casters applying metamagic must either take a full-round action (if the spell normally requires a standard action or less) or add a full-round action to the casting time (if the spell takes 1 full round or longer to cast).\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Spont spells modded with MM feats without extending casting time." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="General"/>
    <tag group="Helper" tag="ShowSpec"/>
    <exprreq message="Spellcraft 12 ranks required."><![CDATA[#skillranks[kSpellcr] >= 12]]></exprreq>
    <exprreq message="Ability to spontaneously cast spells required."><![CDATA[hero.tagis[Hero.SpontArc] <> 0]]></exprreq>
    </thing>
  <thing id="fResMagic" name="Residual Magic" description="You can use the lingering energy from a spell you cast to boost the effect of a later spell.\n\n{b}Prerequisites{/b}: Spellcraft 12 ranks, any metamagic feat.\n\n{b}Benefit{/b}: The Residual Magic feat allows the use of two tactical maneuvers.\n\n{i}Enduring Potency{/i}: If you cast a spell from your daily allotment of spells, then cast the same spell from a scroll or wand in the next round, you can treat the second casting as if it had come from your daily allotment of spells for the purpose of caster level, save DC, and any other effect of the spell.\n\nFor example, if Hennet the 10th-level sorcerer casts {i}magic missile{/i}, then activates a {i}wand of magic missile{/i} (caster level 5th) in the next round, he can treat the wand&apos;s {i}magic missile{/i} as if he had cast it (giving him a greater range, number of missiles, and so forth).\n\n{i}Lingering Metamagic{/i}: If you cast a spell affected by one or more metamagic feats, and then cast the same spell in the next round, you can apply any one of the metamagic effects from the first casting to the second casting, but without any change to the spell&apos;s level. The second spell doesn&apos;t count as being affected by a metamagic feat for the purpose of this benefit (that is, it doesn&apos;t entitle you to apply the metamagic feat to a spell you might cast in the following round). Only spells you cast using your own metamagic feats (as opposed to metamagic effects from magic items) allow this option to function.\n\nFor example, if Hennet uses a 5th-level slot to cast an {i}empowered lightning bolt{/i}, in the next round he can use a 3rd level slot to cast another {i}empowered lightning bolt{/i}. If the first spell was a {i}silent empowered lightning bolt{/i}, he could apply the effect of either Silent Spell or Empower Spell to the second casting of {i}lightning bolt{/i}, but not both.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Gain a variety of options when mix spells &amp; items or MM &amp; not." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Tactical"/>
    <tag group="Helper" tag="ShowSpec"/>
    <exprreq message="Spellcraft 12 ranks required."><![CDATA[#skillranks[kSpellcr] >= 12]]></exprreq>
    <exprreq message="Any metamagic feat required."><![CDATA[tagcount[fCategory.Metamagic] >= 1]]></exprreq>
    </thing>
  <thing id="fRetribSpl" name="Retributive Spell" description="You can keep a spell in reserve to use when a foe causes you harm.\n\n{b}Benefit{/b}: When you cast a spell modified by this metamagic feat, the spell has no immediate effect. Any time you are dealt damage by a melee attack during the next 24 hours (or until you next prepare or ready your spells), you can choose to cast the spell on that attacker as an immediate action. Once activated, a retributive spell disappears (it can only affect one attacker).\n\nYou can apply this feat only to a spell that targets a creature. A retributive spell can target only the attacker that triggered it, even if the spell would normally allow you to target multiple creatures.\n\nYou can have only one retributive spell cast at a time. Casting a second retributive spell cancels the first (eliminating it with no effect). If you prepare or ready spells while you have a retributive spell cast, the spell dissipates with no effect.\n\nA retributive spell uses up a spell slot one level higher than the spell&apos;s actual level.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Cast spell, if hit in melee use imm action to affect that foe. +1 Level." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Metamagic"/>
    <tag group="Helper" tag="ShowSpec"/>
    </thing>
  <thing id="fShadowVei" name="Shadow Veil" description="You draw wisps of darkness across your enemy&apos;s eyes, obscuring the world around him.\n\n{b}Prerequisite{/b}: Ability to cast 2nd-level spells.\n\n{b}Benefit{/b}: As long as you have a darkness spell of 2nd level or higher available to cast, you can obscure the vision of a subject within 30 feet as a standard action. If the subject fails a Will save, it treats all other creatures and objects as though they had concealment and takes a &#150;5 penalty on Spot checks for 1 round.\n\nAs a secondary benefit, you gain a +1 competence bonus to your caster level when casting darkness spells.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Dark 2nd+, stand, -5 Spot &amp; 20% miss to foe in 30 ft for 1 rd (Will neg)." uniqueness="useronce">
