    <prereq message="Ability to cast 2nd level spells required.">
      <validate><![CDATA[validif (tagcount[Hero.Arcane] >= 2 + 1)
validif (tagcount[Hero.Divine] >= 2 + 1)]]></validate>
      </prereq>
    </thing>
  <thing id="xResBonAc" name="Reserve Bonus (acid)" description="+1 competence bonus on caster level for acid spells." compset="Special">
    <tag group="SpecSource" tag="Feat"/>
    <tag group="Helper" tag="ShowSpec"/>
    </thing>
  <thing id="fAlacCogit" name="Alacritous Cogitation" description="You can leave a prepared spell slot open to spontaneously cast a spell.\n\n{b}Prerequisite{/b}: Must prepare arcane spells.\n\n{b}Benefit{/b}: If you leave an arcane spell slot open when preparing spells, you can use that open slot to cast any arcane spell you know of the same level or lower and of casting time no longer than 1 round. Casting the spell requires a full-round action.\n\nYou can use this feat only once per day, regardless of the number of slots you leave open.\n\n{b}Special{/b}: A wizard can select this feat as a wizard bonus feat.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="1/day, full rd, use open spl slot to cast known spl of equal/lower lvl." uniqueness="useronce">
    <comment>Page 37 &#150; Alacritous Cogitation
[Addition]
Revise end of first sentence to read,
&#147;...cast any arcane spell you know of
the same level or lower and of casting
time no longer than 1 round.&#148;</comment>
    <fieldval field="hTotal" value="1"/>
    <usesource source="CompMage" parent="p35" name="Complete Mage"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="Helper" tag="ShowCharge"/>
    <tag group="BonusFor" tag="Wizard"/>
    <tag group="fCategory" tag="General"/>
    <prereq message="Must prepare arcane spells.">
      <validate><![CDATA[          @valid = 0
   if (tagis[Hero.SpontArc] = 0) then
        if (tagcount[Hero.Arcane] >= 0 + 1) then
          @valid = 1
        endif
   endif]]></validate>
      </prereq>
    </thing>
  <thing id="fAquaBre" name="Aquatic Breath" description="Your reservoir of magic allows you to breathe normally even underwater.\n\n{b}Prerequisite{/b}: Ability to cast 3rd-level spells.\n\n{b}Benefit{/b}: As long as you have a water spell of 3rd level or higher available to cast, you can breathe normally in both air and water. This supernatural quality requires no activation.\n\nAs a secondary benefit, you gain a +1 competence bonus to your caster level when casting water spells.\n\n{b}Source{/b}: Complete Mage" compset="Feat" summary="Water spell 3rd level+, gain ability to breath water at will." uniqueness="useronce">
    <usesource source="CompMage"/>
    <tag group="fCategory" tag="Reserve"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="BonusFor" tag="Wizard"/>
    <tag group="SpecType" tag="Movement"/>
    <bootstrap thing="xResBonWa"></bootstrap>
    <prereq message="Ability to cast 3rd level spells required.">
