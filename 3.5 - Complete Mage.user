    <eval phase="PostAttr" priority="11500"><![CDATA[if (#levelcount[Sorcerer] >= 18) then
 hero.child[cHelpSor].field[cKnowMax].arrayvalue[9] -= 1
elseif (#levelcount[Sorcerer] >= 16) then
 hero.child[cHelpSor].field[cKnowMax].arrayvalue[8] -= 1
elseif (#levelcount[Sorcerer] >= 14) then
 hero.child[cHelpSor].field[cKnowMax].arrayvalue[7] -= 1
elseif (#levelcount[Sorcerer] >= 12) then
 hero.child[cHelpSor].field[cKnowMax].arrayvalue[6] -= 1
elseif (#levelcount[Sorcerer] >= 10) then
 hero.child[cHelpSor].field[cKnowMax].arrayvalue[5] -= 1
elseif (#levelcount[Sorcerer] >= 8) then
 hero.child[cHelpSor].field[cKnowMax].arrayvalue[4] -= 1
elseif (#levelcount[Sorcerer] >= 6) then
 hero.child[cHelpSor].field[cKnowMax].arrayvalue[3] -= 1
elseif (#levelcount[Sorcerer] >= 4) then
 hero.child[cHelpSor].field[cKnowMax].arrayvalue[2] -= 1
else
 hero.child[cHelpSor].field[cKnowMax].arrayvalue[1] -= 1
endif]]></eval>
    <evalrule phase="PreLevel" priority="10000" message="Knowledge Arcana rank 1 required."><![CDATA[validif (#skillranks[kKnowArcan] >= 1)]]></evalrule>
