    </thing>
  <thing id="fCeleLight" name="Celestial Light" description="You gain the ability to produce light.\n\n{b}Prerequisites{/b}: Celestial Bloodline, ability to cast 2nd level arcane spells.\n\n{b}Benefit{/b}: You can cast {i}light{/i} five times per day as a spell-like ability (caster level equals your level in the arcane spellcasting class that granted you access to this feat). This ability does not affect your number of spells known or spells per day.\n\n{b}Author{/b}: Scott Carter. {b}Source{/b}: #311.\n\n{b}Source{/b}: Dragon Compendium" compset="Feat" summary="5/day, cast {i}light{/i} as a spell like ability (CL = arcane class level)." uniqueness="useronce">
    <usesource source="DragonComp"/>
    <tag group="fCategory" tag="Bloodline"/>
    <tag group="Helper" tag="ShowSpec" name="ShowSpec" abbrev="ShowSpec"/>
